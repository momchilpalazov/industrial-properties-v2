{% extends 'base.html.twig' %}

{% block title %}{{ 'services.page_title'|trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    {{ encore_entry_link_tags('property-index') }}
    <style>
        /* Industrial Services Page Styles */
        body {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .container {
            position: relative;
        }

        /* Services Content Section */
        .services-content {
            background: #f8f9fa;
        }

        .services-content .section-header {
            text-align: left ;
            margin-bottom: 4rem;
        }        .services-content .section-header h2 {
            font-size: 2.5rem;
            font-weight: 600;
            color: #2c3e50 !important;
            margin-bottom: 1rem;
            display: inline-block;
            padding-bottom: 0.5rem;
        }

        .services-content .section-header p {
            font-size: 1.1rem;
            color: #6c757d !important;
            max-width: 600px;
            margin: 0;
            line-height: 1.6;
            text-align: left !important;
        }

        /* FORCE REMOVE ALL H2 UNDERLINES */
        .section-header h2::after,
        .section-header h2::before,
        h2::after,
        h2::before {
            display: none !important;
            content: none !important;
            background: none !important;
            border: none !important;
            border-bottom: none !important;
            text-decoration: none !important;
        }

        /* Service Cards */
        .service-card {
            background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
            border: 1px solid #dee2e6;
            border-radius: 15px;
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
            transition: all 0.3s ease;
            overflow: hidden;
            position: relative;
        }

        .service-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 32px rgba(0, 0, 0, 0.15);
            border-color: #34495e;
        }

        .service-card-inner {
            padding: 2.5rem;
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .service-icon-wrapper {
            text-align: center;
            margin-bottom: 2rem;
        }

        .service-icon {
            font-size: 4rem !important;
            color: #34495e;
            background: linear-gradient(135deg, #ecf0f1, #bdc3c7);
            width: 80px;
            height: 80px;
            border-radius: 50%;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
        }

        .service-card:hover .service-icon {
            background: linear-gradient(135deg, #34495e, #2c3e50);
            color: #ffffff;
            transform: scale(1.1);
        }

        .service-content {
            flex: 1;
            text-align: center;
        }

        .service-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: #2c3e50 !important;
            margin-bottom: 1rem;
        }

        .service-description {
            color: #495057 !important;
            line-height: 1.6;
            margin-bottom: 1.5rem;
        }

        .service-features {
            margin-bottom: 2rem;
        }

        .feature-list {
            list-style: none;
            padding: 0;
            text-align: left;
        }

        .feature-list li {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 0.75rem;
            color: #495057 !important;
            font-weight: 500;
        }

        .feature-list li .material-icons {
            color: #34495e;
            font-size: 1.2rem !important;
        }

        .service-action {
            margin-top: auto;
            text-align: center;
        }

        .btn-service {
            background: linear-gradient(135deg, #34495e, #2c3e50);
            color: #ffffff;
            border: none;
            border-radius: 10px;
            padding: 12px 30px;
            font-weight: 600;
            font-size: 1rem;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            text-decoration: none;
            position: relative;
            overflow: hidden;
        }

        .btn-service::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.5s;
        }

        .btn-service:hover::before {
            left: 100%;
        }

        .btn-service:hover {
            background: linear-gradient(135deg, #2c3e50, #1a252f);
            color: #ffffff;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(44, 62, 80, 0.3);
        }

        /* CTA Section */
        .services-cta {
            background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
            color: #ffffff;
            padding: 80px 0;
            position: relative;
            overflow: hidden;
        }

        .services-cta::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(45deg, rgba(52, 73, 94, 0.1) 0%, transparent 50%);
            z-index: 1;
        }

        .cta-content {
            position: relative;
            z-index: 2;
        }        .services-cta h2 {
            font-size: 2.5rem;
            font-weight: 600;
            color: #ffffff !important;
            margin-bottom: 1rem;
            text-align: left;
        }

        .services-cta p {
            font-size: 1.1rem;
            color: rgba(255, 255, 255, 0.9) !important;
            line-height: 1.6;
            margin-bottom: 0;
            text-align: left;
        }

        .btn-cta {
            background: linear-gradient(135deg, #ffffff, #ecf0f1);
            color: #2c3e50;
            border: none;
            border-radius: 10px;
            padding: 15px 35px;
            font-weight: 600;
            font-size: 1.1rem;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            text-decoration: none;
            position: relative;
            overflow: hidden;
        }

        .btn-cta::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(44, 62, 80, 0.1), transparent);
            transition: left 0.5s;
        }

        .btn-cta:hover::before {
            left: 100%;
        }

        .btn-cta:hover {
            background: linear-gradient(135deg, #ecf0f1, #bdc3c7);
            color: #2c3e50;
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

        /* Animations */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .service-card {
            animation: fadeInUp 0.6s ease-out;
        }

        .service-card:nth-child(2) { animation-delay: 0.1s; }
        .service-card:nth-child(3) { animation-delay: 0.2s; }
        .service-card:nth-child(4) { animation-delay: 0.3s; }
        .service-card:nth-child(5) { animation-delay: 0.4s; }
        .service-card:nth-child(6) { animation-delay: 0.5s; }

        /* Mobile Responsiveness */
        @media (max-width: 768px) {
            .services-content .section-header h2 {
                font-size: 2rem;
            }

            .service-card-inner {
                padding: 2rem;
            }

            .service-icon {
                font-size: 3rem !important;
                width: 60px;
                height: 60px;
            }

            .service-title {
                font-size: 1.3rem;
            }            .services-cta {
                padding: 60px 0;
            }

            .services-cta h2 {
                font-size: 2rem;
                margin-bottom: 1rem;
                text-align: center;
            }

            .services-cta p {
                text-align: center;
            }

            .services-cta .col-lg-4 {
                margin-top: 2rem;
            }
        }

        @media (max-width: 576px) {
            .services-content .section-header h2 {
                font-size: 1.75rem;
            }

            .service-card-inner {
                padding: 1.5rem;
            }            .services-cta h2 {
                font-size: 1.75rem;
                text-align: left;
            }

            .services-cta p {
                text-align: center;
            }

            .btn-cta {
                padding: 12px 25px;
                font-size: 1rem;
            }

            .btn-service {
                padding: 10px 20px;
                font-size: 0.9rem;
            }
        }

        /* Accessibility & Performance */
        @media (prefers-reduced-motion: reduce) {
            .service-card {
                animation: none;
            }
            
            .btn-service:hover,
            .btn-cta:hover,
            .service-card:hover {
                transform: none;
            }
        }

        @media (prefers-contrast: high) {
            .service-card {
                border-width: 2px;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Hero Section -->
    <section class="services-hero">
        <div class="container">
            <div class="section-header">
                <h1>{{ 'services.hero.title'|trans }}</h1>
                <p>{{ 'services.hero.subtitle'|trans }}</p>
            </div>
        </div>
    </section>    <!-- Services Section -->
    <section class="services-content py-5">
        <div class="container">
            <div class="section-header mb-5">
                <h2>{{ 'services.section.title'|trans }}</h2>
                <p>{{ 'services.section.subtitle'|trans }}</p>
            </div>

            <div class="row g-4">
                {% for service in services %}
                    <div class="col-lg-4 col-md-6">
                        <div class="service-card h-100">
                            <div class="service-card-inner">
                                <div class="service-icon-wrapper">
                                    <i class="material-icons service-icon">{{ service.icon|default('business') }}</i>
                                </div>
                                <div class="service-content">
                                    <h3 class="service-title">{{ service.title|trans }}</h3>
                                    <p class="service-description">{{ service.description|trans }}</p>
                                    <div class="service-features">
                                        {% if service.features is defined %}
                                            <ul class="feature-list">
                                                {% for feature in service.features %}
                                                    <li><i class="material-icons">check_circle</i> {{ feature|trans }}</li>
                                                {% endfor %}
                                            </ul>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="service-action">
                                    <a href="{{ path('app_contact') }}" class="btn btn-service">
                                        <i class="material-icons">contact_mail</i>
                                        <span>{{ 'services.contact_button'|trans }}</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="services-cta">
        <div class="container">
            <div class="cta-content">
                <div class="row align-items-center">                    <div class="col-lg-8">
                        <h2>{{ 'services.cta.title'|trans }}</h2>
                        <p>{{ 'services.cta.subtitle'|trans }}</p>
                    </div>
                    <div class="col-lg-4 text-lg-end">
                        <a href="{{ path('app_contact') }}" class="btn btn-cta">
                            <i class="material-icons">phone</i>
                            <span>{{ 'services.cta.button'|trans }}</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('property-index') }}
{% endblock %}