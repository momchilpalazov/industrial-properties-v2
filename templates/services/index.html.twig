{% extends 'base.html.twig' %}

{% block title %}{{ 'services.page_title'|trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .services-hero {
            background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('{{ asset('img/services-hero.jpg') }}');
            background-size: cover;
            background-position: center;
            color: white;
            padding: 8rem 0;
            margin-top: 56px;
            text-align: center;
        }
        
        .services-hero h1 {
            font-size: 3rem;
            font-weight: 700;
            margin-bottom: 1rem;
        }
        
        .services-hero p {
            font-size: 1.25rem;
            max-width: 800px;
            margin: 0 auto;
        }
        
        .service-card {
            height: 100%;
            transition: transform 0.3s;
            border: none;
            border-radius: 0.5rem;
            overflow: hidden;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }
        
        .service-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }
        
        .service-icon {
            font-size: 2.5rem;
            color: var(--bs-primary);
            margin-bottom: 1rem;
        }
        
        .service-title {
            font-size: 1.25rem;
            font-weight: 600;
            margin-bottom: 1rem;
            color: #212529;
        }
        
        .service-description {
            color: #6c757d;
            margin-bottom: 1.5rem;
            flex-grow: 1;
        }
        
        .services-section {
            padding: 5rem 0;
            background-color: #f8f9fa;
        }
        
        .section-title {
            text-align: center;
            margin-bottom: 3rem;
        }
        
        .section-title h2 {
            font-size: 2.5rem;
            font-weight: 700;
            color: #212529;
            margin-bottom: 1rem;
        }
        
        .section-title p {
            font-size: 1.25rem;
            color: #6c757d;
            max-width: 800px;
            margin: 0 auto;
        }

        @media (max-width: 768px) {
            .services-hero {
                padding: 6rem 0;
            }
            
            .services-hero h1 {
                font-size: 2.5rem;
            }
            
            .services-hero p {
                font-size: 1.1rem;
            }
            
            .section-title h2 {
                font-size: 2rem;
            }
            
            .section-title p {
                font-size: 1.1rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Hero Section -->
    <section class="services-hero">
        <div class="container">
            <h1>{{ 'services.hero.title'|trans }}</h1>
            <p>{{ 'services.hero.subtitle'|trans }}</p>
        </div>
    </section>

    <!-- Services Section -->
    <section class="services-section">
        <div class="container">
            <div class="section-title">
                <h2>{{ 'services.section.title'|trans }}</h2>
                <p>{{ 'services.section.subtitle'|trans }}</p>
            </div>

            <div class="row g-4">
                {% for service in services %}
                    <div class="col-md-6 col-lg-4">
                        <div class="card service-card">
                            <div class="card-body text-center">
                                <i class="bi {{ service.icon }} service-icon"></i>
                                <h3 class="service-title">{{ service.title|trans }}</h3>
                                <p class="service-description">{{ service.description|trans }}</p>
                                <a href="{{ path('app_contact') }}" class="btn btn-primary">
                                    {{ 'services.contact_button'|trans }}
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %} 