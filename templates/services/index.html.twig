{% extends 'base.html.twig' %}

{% block title %}{{ 'services.page_title'|trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    {{ encore_entry_link_tags('property-index') }}
{% endblock %}

{% block body %}
    <!-- Hero Section -->
    <section class="services-hero">
        <div class="container">
            <div class="section-header">
                <h1>{{ 'services.hero.title'|trans }}</h1>
                <p>{{ 'services.hero.subtitle'|trans }}</p>
            </div>
        </div>
    </section>

    <!-- Services Section -->
    <section class="services-content py-5">
        <div class="container">
            <div class="section-header mb-5">
                <h2>{{ 'services.section.title'|trans }}</h2>
                <p>{{ 'services.section.subtitle'|trans }}</p>
            </div>

            <div class="row g-4">
                {% for service in services %}
                    <div class="col-lg-4 col-md-6">
                        <div class="service-card h-100">
                            <div class="service-card-inner">
                                <div class="service-icon-wrapper">
                                    <i class="material-icons service-icon">{{ service.icon|default('business') }}</i>
                                </div>
                                <div class="service-content">
                                    <h3 class="service-title">{{ service.title|trans }}</h3>
                                    <p class="service-description">{{ service.description|trans }}</p>
                                    <div class="service-features">
                                        {% if service.features is defined %}
                                            <ul class="feature-list">
                                                {% for feature in service.features %}
                                                    <li><i class="material-icons">check_circle</i> {{ feature|trans }}</li>
                                                {% endfor %}
                                            </ul>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="service-action">
                                    <a href="{{ path('app_contact') }}" class="btn btn-industrial">
                                        <i class="material-icons">contact_mail</i>
                                        <span>{{ 'services.contact_button'|trans }}</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="services-cta">
        <div class="container">
            <div class="cta-content">
                <div class="row align-items-center">
                    <div class="col-lg-8">
                        <h2>{{ 'services.cta.title'|trans }}</h2>
                        <p>{{ 'services.cta.subtitle'|trans }}</p>
                    </div>
                    <div class="col-lg-4 text-lg-end">
                        <a href="{{ path('app_contact') }}" class="btn btn-industrial btn-cta">
                            <i class="material-icons">phone</i>
                            <span>{{ 'services.cta.button'|trans }}</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('property-index') }}
{% endblock %}