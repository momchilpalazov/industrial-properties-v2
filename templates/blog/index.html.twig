{% extends 'base.html.twig' %}

{% block title %}{{ 'blog.title'|trans({}, 'blog') }}{% endblock %}

{% block meta_description %}{{ 'blog.meta.description'|trans({}, 'blog') }}{% endblock %}

{% block meta_keywords %}{{ 'blog.meta.keywords'|trans({}, 'blog') }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    {{ encore_entry_link_tags('blog') }}
    <style>
    /* Blog Index Left Alignment Styles */
    .blog-hero,
    .blog-hero h1,
    .blog-hero p,
    .blog-hero .section-header,
    .blog-hero .section-header h1,
    .blog-hero .section-header p,
    .blog-card h2,
    .blog-card p,
    .card-title,
    .card-text {
        text-align: left !important;
        margin-left: 0 !important;
        margin-right: auto !important;
    }
    
    .blog-hero .section-header {
        margin: 0 !important;
    }
    </style>
{% endblock %}

{% block body %}
    <div class="blog-page">
        <!-- Hero Section -->
        <section class="blog-hero">
            <div class="container">
                <div class="section-header">
                    <h1>{{ 'blog.title'|trans }}</h1>
                    <p>{{ 'blog.subtitle'|trans }}</p>
                </div>
            </div>
        </section>

        <!-- Categories -->
        <section class="blog-categories">
            <div class="container">
                <nav class="nav nav-pills">
                    <a class="nav-link {% if not currentCategory %}active{% endif %}" 
                       href="{{ path('app_blog_index') }}">
                        {{ 'blog.categories.all'|trans }}
                    </a>
                    {% for key, label in categories %}
                        <a class="nav-link {% if currentCategory == key %}active{% endif %}" 
                           href="{{ path('app_blog_index', {'category': key}) }}">
                            {{ label|trans }}
                        </a>
                    {% endfor %}
                </nav>
            </div>
        </section>

        <!-- Blog Posts -->
        <section class="blog-content">
            <div class="container">
                <div class="row g-4">
                    {% for post in posts %}
                        <div class="col-md-6 col-lg-4">
                            <article class="blog-card">
                                {% if post.category is defined %}
                                    <span class="category-badge">
                                        {{ categories[post.category]|trans }}
                                    </span>
                                {% endif %}

                                {% if post.image_path is defined %}
                                    <img src="{{ '/uploads/blog/' ~ post.image_path }}" 
                                         class="card-img-top" 
                                         alt="{{ post.title(app.request.locale) }}"
                                         loading="lazy">
                                {% endif %}

                                <div class="card-body">
                                    <h2 class="card-title">{{ post.title(app.request.locale) }}</h2>
                                    <p class="card-text">{{ post.excerpt(app.request.locale) }}</p>
                                    <div class="card-meta">
                                        <span>
                                            <i class="bi bi-calendar-event"></i>
                                            {{ post.publishedAt|date('d.m.Y') }}
                                        </span>
                                        <a href="{{ path('app_blog_show', {'slug': post.slug}) }}" 
                                           class="btn btn-industrial btn-sm">
                                            {{ 'blog.read_more'|trans }}
                                        </a>
                                    </div>
                                </div>
                            </article>
                        </div>
                    {% else %}
                        <div class="col-12">
                            <div class="alert alert-info" style="text-align: left !important;">
                                <div class="no-results-icon">
                                    <i class="bi bi-journal-text"></i>
                                </div>
                                <h3>{{ 'blog.search.no_results'|trans }}</h3>
                                <p>{{ 'blog.search.no_results_text'|trans }}</p>
                            </div>
                        </div>
                    {% endfor %}
                </div>

                <!-- Pagination -->
                {% if posts.pageCount > 1 %}
                    <div class="d-flex justify-content-center mt-5">
                        {{ knp_pagination_render(posts) }}
                    </div>
                {% endif %}
            </div>
        </section>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('blog') }}
{% endblock %}