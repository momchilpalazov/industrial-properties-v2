<div class="col-md-6 col-lg-4">
    <article class="blog-card">
        {% if post.category is defined %}
            <span class="category-badge">
                {{ categories[post.category]|trans }}
            </span>
        {% endif %}

        {% if post.image_path is defined %}
            <img src="{{ '/uploads/blog/' ~ post.image_path }}" 
                 class="card-img-top" 
                 alt="{{ post.title(app.request.locale) }}"
                 loading="lazy">
        {% else %}
            <div class="card-img-placeholder">
                <i class="bi bi-journal-text"></i>
            </div>
        {% endif %}

        <div class="card-body">
            <h2 class="card-title">{{ post.title(app.request.locale) }}</h2>
            <p class="card-text">{{ post.excerpt(app.request.locale) }}</p>
            <div class="card-meta">
                <span class="card-date">
                    <i class="bi bi-calendar-event"></i>
                    {{ post.publishedAt|date('d.m.Y') }}
                </span>
                <a href="{{ path('app_blog_show', {'slug': post.slug}) }}" 
                   class="btn btn-primary btn-sm">
                    {{ 'blog.read_more'|trans }}
                </a>
            </div>
        </div>
    </article>
</div>