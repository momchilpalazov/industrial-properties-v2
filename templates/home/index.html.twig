{% extends 'base.html.twig' %}

{% block title %}{{ 'home.hero.title'|trans }}{% endblock %}

{% block description %}Открийте най-добрите индустриални имоти в България. Складове, производствени бази, логистични центрове за наем и продажба.{% endblock %}

{% block keywords %}индустриални имоти България, складове под наем, производствени бази продажба, логистични центрове, индустриални зони{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('home') }}
    <style>
        /* Additional modern enhancements for homepage consistency */
        .hero-section {
            min-height: 100vh;
            background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #334155 100%);
            color: white;
            display: flex;
            align-items: center;
            position: relative;
            overflow: hidden;
            margin-top: 76px;
        }
        
        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(rgba(15, 23, 42, 0.8), rgba(51, 65, 85, 0.6));
            z-index: 1;
        }
        
        .hero-section::after {
            content: '';
            position: absolute;
            top: -50%;
            right: -20%;
            width: 80%;
            height: 200%;
            background: url("data:image/svg+xml,%3Csvg width='100' height='100' xmlns='http://www.w3.org/2000/svg'%3E%3Cdefs%3E%3Cpattern id='grid' width='20' height='20' patternUnits='userSpaceOnUse'%3E%3Cpath d='M 20 0 L 0 0 0 20' fill='none' stroke='rgba(255,255,255,0.1)' stroke-width='1'/%3E%3C/pattern%3E%3C/defs%3E%3Crect width='100' height='100' fill='url(%23grid)'/%3E%3C/svg%3E");
            transform: rotate(45deg);
            z-index: 1;
            animation: float 20s ease-in-out infinite;
        }
        
        .hero-section .container {
            position: relative;
            z-index: 2;
        }
        
        .hero-title {
            font-size: clamp(2.5rem, 5vw, 4rem);
            font-weight: 200;
            margin-bottom: 1.5rem;
            line-height: 1.1;
            letter-spacing: -0.02em;
        }
        
        .hero-subtitle {
            font-size: 1.25rem;
            font-weight: 300;
            margin-bottom: 2rem;
            opacity: 0.9;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
            line-height: 1.6;
        }
        
        .btn-industrial {
            background: linear-gradient(45deg, #ffffff, #f8fafc);
            color: #0f172a;
            padding: 1rem 2rem;
            border-radius: 50px;
            font-weight: 600;
            font-size: 1.1rem;
            text-decoration: none;
            display: inline-block;
            transition: all 0.4s ease;
            border: none;
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }
        
        .btn-industrial::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(59, 130, 246, 0.4), transparent);
            transition: left 0.5s ease;
        }
        
        .btn-industrial:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
            color: #0f172a;
            text-decoration: none;
        }
        
        .btn-industrial:hover::before {
            left: 100%;
        }
        
        @keyframes float {
            0%, 100% { transform: rotate(45deg) translateY(0px); }
            50% { transform: rotate(45deg) translateY(-20px); }
        }
        
        /* Section improvements */
        .section-header {
            text-align: left;
            margin-bottom: 3rem;
            position: relative;
        }
        
        .section-header h2 {
            font-size: 2.5rem;
            font-weight: 300;
            color: #1e293b;
            margin-bottom: 0.8rem;
            position: relative;
            letter-spacing: -0.02em;
        }

        /* FORCE REMOVE ALL H2 UNDERLINES */
        .section-header h2::after,
        .section-header h2::before,
        h2::after,
        h2::before {
            display: none !important;
            content: none !important;
            background: none !important;
            border: none !important;
            border-bottom: none !important;
            text-decoration: none !important;
        }
        

        
        .property-types,
        .featured-properties,
        .latest-properties {
            padding: 5rem 0;
        }
        
        .vip-property-section {
            padding: 5rem 0;
            background: #f8fafc;
            position: relative;
        }
        
        .vip-property-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 1px;
            background: linear-gradient(90deg, transparent, #1976d2, transparent);
        }
        
        .cta-section {
            background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
            color: white;
            padding: 5rem 0;
            position: relative;
            overflow: hidden;
        }
        
        .cta-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='rgba(255,255,255,0.03)' fill-opacity='1'%3E%3Ccircle cx='30' cy='30' r='2'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
            z-index: 1;
        }
        
        .cta-section .container {
            position: relative;
            z-index: 2;
        }
        
        .cta-section h2 {
            font-size: 2.25rem;
            font-weight: 600;
            margin-bottom: 1.5rem;
            line-height: 1.2;
        }
        
        /* Property card enhancements */
        .property-card {
            background: white;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
            border: 1px solid #e2e8f0;
            position: relative;
        }
        
        .property-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #3b82f6, #1976d2, #ff6b35);
            transform: scaleX(0);
            transition: transform 0.4s ease;
            transform-origin: left;
        }
        
        .property-card:hover {
            transform: translateY(-12px) scale(1.02);
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
        }
        
        .property-card:hover::before {
            transform: scaleX(1);
        }
        
        .property-image {
            width: 100%;
            height: 220px;
            object-fit: cover;
            transition: transform 0.6s ease;
        }
        
        .property-card:hover .property-image {
            transform: scale(1.1);
        }
        
        .type-card {
            background: white;
            border-radius: 20px;
            padding: 3rem 2rem;
            text-align: center;
            transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
            border: 1px solid #e2e8f0;
            position: relative;
            overflow: hidden;
            height: 100%;
        }
        
        .type-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(59, 130, 246, 0.1), transparent);
            transition: left 0.5s ease;
        }
        
        .type-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            border-color: #3b82f6;
        }
        
        .type-card:hover::before {
            left: 100%;
        }
        
        .type-icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #1e293b, #334155);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 2rem;
            color: white;
            font-size: 2rem;
            transition: all 0.4s ease;
        }
        
        .type-card:hover .type-icon {
            transform: scale(1.2) rotate(5deg);
            background: linear-gradient(135deg, #3b82f6, #1976d2);
        }
        
        /* Responsive adjustments */
        @media (max-width: 768px) {
            .hero-section {
                min-height: 80vh;
                padding: 4rem 0;
            }
            
            .hero-title {
                font-size: 2.5rem;
            }
            
            .section-header {
                text-align: center;
                margin-bottom: 2rem;
            }
            
            .section-header h2 {
                font-size: 2rem;
            }
            

            
            .property-types,
            .featured-properties,
            .latest-properties,
            .vip-property-section {
                padding: 3rem 0;
            }
            
            .cta-section h2 {
                font-size: 1.8rem;
            }
        }
    </style>
{% endblock %}

{% block body %}    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container text-center">
            <h1 class="hero-title">{{ 'home.hero.title'|trans }}</h1>
            <p class="hero-subtitle">{{ 'home.hero.subtitle'|trans }}</p>
            <a href="{{ path('app_property_index') }}" class="btn btn-industrial btn-lg">
                {{ 'home.hero.cta'|trans }}
            </a>
        </div>
    </section>    <!-- Property Types -->
    <section class="property-types">
        <div class="container">
            <div class="section-header">
                <h2>{{ 'home.property_types.title'|trans }}</h2>
                <p class="lead">{{ 'home.property_types.subtitle'|trans }}</p>
            </div>
            <div class="row g-4">
                <div class="col-lg-4 col-md-6">
                    <a href="{{ path('app_property_index', {'type': 'industrial_land'}) }}" class="text-decoration-none">
                        <div class="type-card hover-lift">
                            <div class="type-icon">
                                <i class="bi bi-map"></i>
                            </div>
                            <h3 class="h5 text-industrial">{{ 'home.property_types.industrial_land'|trans }}</h3>
                            <p class="text-muted-industrial mb-3">{{ 'home.property_types.industrial_land_desc'|trans }}</p>
                            {% if property_stats['industrial_land'] is defined %}
                                <div class="badge-industrial">{{ 'home.property_types.properties_count'|trans({'count': property_stats['industrial_land']}) }}</div>
                            {% endif %}
                        </div>
                    </a>
                </div>
                <div class="col-lg-4 col-md-6">
                    <a href="{{ path('app_property_index', {'type': 'logistics_center'}) }}" class="text-decoration-none">
                        <div class="type-card hover-lift">
                            <div class="type-icon">
                                <i class="bi bi-box-seam"></i>
                            </div>
                            <h3 class="h5 text-industrial">{{ 'home.property_types.logistics_center'|trans }}</h3>
                            <p class="text-muted-industrial mb-3">{{ 'home.property_types.logistics_center_desc'|trans }}</p>
                            {% if property_stats['logistics_center'] is defined %}
                                <div class="badge-industrial">{{ 'home.property_types.properties_count'|trans({'count': property_stats['logistics_center']}) }}</div>
                            {% endif %}
                        </div>
                    </a>
                </div>
                <div class="col-lg-4 col-md-6">
                    <a href="{{ path('app_property_index', {'type': 'production_facility'}) }}" class="text-decoration-none">
                        <div class="type-card hover-lift">
                            <div class="type-icon">
                                <i class="bi bi-building"></i>
                            </div>
                            <h3 class="h5 text-industrial">{{ 'home.property_types.production_facility'|trans }}</h3>
                            <p class="text-muted-industrial mb-3">{{ 'home.property_types.production_facility_desc'|trans }}</p>
                            {% if property_stats['production_facility'] is defined %}
                                <div class="badge-industrial">{{ 'home.property_types.properties_count'|trans({'count': property_stats['production_facility']}) }}</div>
                            {% endif %}
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </section>

    {% if vip_properties|length > 0 %}
        <section class="vip-property-section">
            <div class="container">
                <h2><i class="bi bi-star-fill"></i>{{ 'property.vip_properties'|trans }}</h2>
                <div class="row g-4">
                    {% for property in vip_properties %}
                        <div class="col-lg-4 col-md-6">
                            <div class="vip-property-card">
                                {% if property.mainImage %}
                                    <img src="{{ asset('uploads/images/properties/' ~ property.id ~ '/' ~ property.mainImage.filename) }}"
                                         class="vip-property-image"
                                         alt="{{ property.title }}">
                                {% else %}
                                    <img src="{{ asset('images/no-image.jpg') }}"
                                         class="vip-property-image"
                                         alt="No image available">
                                {% endif %}
                                
                                <div class="vip-property-details">
                                    <h3 class="vip-property-title">{{ property.title }}</h3>
                                    
                                    <div class="vip-property-info">
                                        <p>
                                            <i class="bi bi-upc-scan"></i>
                                            {{ property.referenceNumber }}
                                        </p>
                                        <p>
                                            <i class="bi bi-geo-alt"></i>
                                            {{ property.location }}
                                        </p>
                                        <p>
                                            <i class="bi bi-arrows-angle-expand"></i>
                                            {{ property.area }} м²
                                        </p>
                                        <p>
                                            <i class="bi bi-building"></i>
                                            {{ property.type|trans }}
                                        </p>
                                    </div>
                                    
                                    <div class="vip-property-price">
                                        <i class="bi bi-tag"></i>
                                        {{ property.price|number_format(0, '.', ' ') }} €
                                    </div>
                                    
                                    <div class="vip-property-status status-{{ property.status }}">
                                        <i class="bi bi-circle-fill"></i>
                                        {{ ('property.status.' ~ property.status)|trans }}
                                    </div>
                                    
                                    <a href="{{ path('app_property_show', {id: property.id}) }}" 
                                       class="btn btn-primary w-100">
                                        {{ 'property.details'|trans }}
                                    </a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </section>
    {% endif %}    <!-- Featured Properties -->
    <section class="featured-properties">
        <div class="container">
            <div class="section-header">
                <h2>{{ 'home.featured_properties.title'|trans }}</h2>
                <p class="lead">{{ 'home.featured_properties.subtitle'|trans|default('Препоръчани индустриални имоти с отличени характеристики') }}</p>
            </div>
            <div class="row g-4">
                {% for property in featured_properties %}
                    <div class="col-lg-4 col-md-6">
                        <div class="card property-card h-100 hover-lift">
                            {% if property.mainImage %}
                                <img src="{{ asset('uploads/images/properties/' ~ property.id ~ '/' ~ property.mainImage.filename) }}"
                                     class="card-img-top property-image"
                                     alt="{{ property.title }}">
                            {% endif %}
                            <div class="card-body">
                                <h5 class="card-title text-industrial">{{ property.title }}</h5>
                                <p class="card-text text-muted-industrial mb-2">
                                    <i class="bi bi-geo-alt"></i> {{ property.location }}
                                </p>
                                <div class="property-features mb-3">
                                    <div class="property-feature">
                                        <i class="bi bi-rulers"></i>
                                        {{ property.area }} м²
                                    </div>
                                    <div class="property-feature">
                                        <i class="bi bi-currency-euro"></i>
                                        {{ property.price|number_format(0, '.', ' ') }}
                                    </div>
                                </div>
                                <a href="{{ path('app_property_show', {id: property.id}) }}" 
                                   class="btn btn-industrial">{{ 'property.details'|trans }}</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section><!-- CTA Section -->
    <section class="cta-section pattern-dots">
        <div class="container">
            <h2 class="mb-4">{{ 'home.cta.title'|trans }}</h2>
            <p class="mb-4">{{ 'home.cta.subtitle'|trans }}</p>
            <a href="{{ path('app_contact') }}" class="btn btn-light btn-lg">{{ 'home.cta.button'|trans }}</a>
        </div>
    </section>    {% if latest_properties|length > 0 %}
        <section class="latest-properties">
            <div class="container">
                <div class="section-header">
                    <h2>{{ 'property.latest_properties'|trans }}</h2>
                    <p class="lead">{{ 'home.latest_properties.subtitle'|trans|default('Най-новите добавени индустриални имоти в нашата база') }}</p>
                </div>
                <div class="row g-4">
                    {% for property in latest_properties %}
                        <div class="col-lg-4 col-md-6">
                            <div class="card property-card h-100 hover-lift">
                                {% if property.mainImage %}
                                    <img src="{{ asset('uploads/images/properties/' ~ property.id ~ '/' ~ property.mainImage.filename) }}"
                                         class="card-img-top property-image"
                                         alt="{{ property.title }}">
                                {% endif %}
                                <div class="card-body">
                                    <h5 class="card-title text-industrial">{{ property.title }}</h5>
                                    <p class="card-text text-muted-industrial mb-2">
                                        <i class="bi bi-geo-alt"></i> {{ property.location }}
                                    </p>
                                    <div class="property-features mb-3">
                                        <div class="property-feature">
                                            <i class="bi bi-rulers"></i>
                                            {{ property.area }} м²
                                        </div>
                                        <div class="property-feature">
                                            <i class="bi bi-currency-euro"></i>
                                            {{ property.price|number_format(0, '.', ' ') }}
                                        </div>
                                    </div>
                                    <a href="{{ path('app_property_show', {id: property.id}) }}" 
                                       class="btn btn-industrial">{{ 'property.details'|trans }}</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </section>
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('home') }}
{% endblock %} 