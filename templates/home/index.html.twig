{% extends 'base.html.twig' %}

{% block title %}{{ translations.home.title }} - Industrial Properties{% endblock %}

{% block content %}
<!-- Hero Section -->
<section class="hero-section py-5 bg-light">
    <div class="container-fluid px-4">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="title display-4 mb-0">{{ translations.home.hero_title }}</h1>
                <div class="heading-divider"></div>
                <p class="lead mb-4">{{ translations.home.hero_text }}</p>
                <a href="/properties" class="btn btn-primary btn-lg">
                    {{ translations.home.view_all }}
                </a>
            </div>

            <div class="col-md-6">
                <!-- Search Form -->
                <div class="card shadow">
                    <div class="card-body p-4">
                        <h5 class="card-title mb-0">{{ translations.search.title }}</h5>
                        <div class="heading-divider"></div>
                        <form action="/properties" method="get">
                            <div class="mb-3">
                                <select name="type" class="form-select form-select-lg">
                                    <option value="">{{ translations.search.all_types }}</option>
                                    {% for key, value in translations.property.type %}
                                        <option value="{{ key }}">{{ value }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="row mb-3">
                                <div class="col-6">
                                    <input type="number" name="min_area" class="form-control form-control-lg" 
                                           placeholder="{{ translations.search.min_area }}">
                                </div>
                                <div class="col-6">
                                    <input type="number" name="max_area" class="form-control form-control-lg" 
                                           placeholder="{{ translations.search.max_area }}">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-6">
                                    <input type="number" name="min_price" class="form-control form-control-lg" 
                                           placeholder="{{ translations.search.min_price }}">
                                </div>
                                <div class="col-6">
                                    <input type="number" name="max_price" class="form-control form-control-lg" 
                                           placeholder="{{ translations.search.max_price }}">
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary btn-lg w-100">
                                {{ translations.search.submit }}
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Properties -->
<section class="featured-properties py-5">
    <div class="container-fluid px-4">
        <h2 class="title display-5 mb-0">{{ translations.home.featured_properties }}</h2>
        <div class="heading-divider"></div>
        <div class="row g-4">
            {% for property in featured_properties %}
                {% include 'property/_card.html.twig' with {property: property} %}
            {% endfor %}
        </div>
    </div>
</section>

<!-- Latest Properties -->
<section class="latest-properties py-5 bg-light">
    <div class="container-fluid px-4">
        <h2 class="title display-5 mb-0">{{ translations.home.latest_properties }}</h2>
        <div class="heading-divider"></div>
        <div class="row g-4">
            {% for property in latest_properties %}
                {% include 'property/_card.html.twig' with {property: property} %}
            {% endfor %}
        </div>
    </div>
</section>

<!-- Blog Posts -->
<section class="blog-posts py-5">
    <div class="container-fluid px-4">
        <h2 class="title display-5 mb-0">{{ translations.home.latest_posts }}</h2>
        <div class="heading-divider"></div>
        <div class="row g-4">
            {% for post in latest_posts %}
                {% include 'blog/_card.html.twig' with {post: post} %}
            {% endfor %}
        </div>
    </div>
</section>
{% endblock %} 