{% extends 'base.html.twig' %}

{% block title %}{{ settings.metaTitleBg }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .about-header {
            background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('{{ asset('images/about-bg.jpg') }}') no-repeat center center;
            background-size: cover;
            height: 300px;
            display: flex;
            align-items: center;
            text-align: center;
            color: white;
            margin-top: 56px;
        }
        .team-member-img {
            width: 150px;
            height: 150px;
            object-fit: cover;
            border-radius: 50%;
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Header -->
    <section class="about-header">
        <div class="container">
            <h1 class="display-4">{{ settings.titleBg }}</h1>
            <p class="lead">{{ settings.subtitleBg }}</p>
        </div>
    </section>

    <!-- About Content -->
    <section class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h2 class="mb-4">Нашата история</h2>
                    {{ settings.contentBg|raw }}
                </div>
                <div class="col-md-6">
                    {% if settings.companyImage %}
                        <img src="{{ asset(settings.companyImage) }}" alt="Our Company" class="img-fluid rounded shadow">
                    {% else %}
                        <img src="{{ asset('images/about-company.jpg') }}" alt="Our Company" class="img-fluid rounded shadow">
                    {% endif %}
                </div>
            </div>
        </div>
    </section>

    <!-- Our Values -->
    <section class="py-5 bg-light">
        <div class="container">
            <h2 class="text-center mb-5">Нашите ценности</h2>
            <div class="row g-4">
                {% for key, value in settings.valuesBg %}
                    <div class="col-md-4">
                        <div class="text-center">
                            <i class="bi bi-star fs-1 text-primary mb-3"></i>
                            <h4>{{ value.title }}</h4>
                            <p class="text-muted">{{ value.description }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <!-- Our Team -->
    <section class="py-5">
        <div class="container">
            <h2 class="text-center mb-5">Нашият екип</h2>
            <div class="row g-4">
                {% for member in settings.team %}
                    <div class="col-md-4">
                        <div class="text-center">
                            {% if member.image %}
                                <img src="{{ asset(member.image) }}" alt="{{ member.name }}" class="team-member-img mb-3">
                            {% else %}
                                <img src="{{ asset('images/team/default-avatar.jpg') }}" alt="{{ member.name }}" class="team-member-img mb-3">
                            {% endif %}
                            <h4>{{ member.name }}</h4>
                            <p class="text-muted">{{ member.position }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <!-- Call to Action -->
    <section class="py-5 bg-primary text-white">
        <div class="container text-center">
            <h2 class="mb-4">Готови ли сте да започнем заедно?</h2>
            <p class="lead mb-4">Свържете се с нас за професионална консултация</p>
            <a href="{{ path('app_contact') }}" class="btn btn-light btn-lg">Свържете се с нас</a>
        </div>
    </section>
{% endblock %} 