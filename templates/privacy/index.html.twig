{% extends 'base.html.twig' %}

{% block title %}{{ 'privacy.page_title'|trans({}, 'privacy') }} - Industrial Properties{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Privacy Policy Page Styles - Professional GDPR Design */
        .privacy-page {
            padding-top: 120px;
            padding-bottom: 5rem;
            background: #ffffff;
        }
        
        .privacy-hero {
            background: #f8f9fa;
            color: #333;
            padding: 4rem 0;
            margin-bottom: 3rem;
            position: relative;
            border-bottom: 1px solid #e0e0e0;
        }
        
        .privacy-hero .container {
            position: relative;
            z-index: 2;
        }
        
        .privacy-hero h1 {
            font-size: 2.5rem;
            font-weight: 300;
            margin-bottom: 1rem;
            line-height: 1.2;
            letter-spacing: -0.02em;
        }
        
        .privacy-hero p {
            font-size: 1.1rem;
            opacity: 0.9;
            margin-bottom: 0;
        }
        
        .privacy-content {
            background: white;
            padding: 2.5rem;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.08);
            margin-bottom: 2rem;
        }
        
        .privacy-content h2 {
            color: #1e293b;
            font-size: 1.75rem;
            margin-top: 2.5rem;
            margin-bottom: 1rem;
            padding-bottom: 0.5rem;
            border-bottom: 3px solid #34495e;
            font-weight: 600;
        }
        
        .privacy-content h2:first-child {
            margin-top: 0;
        }
        
        .privacy-content h3 {
            color: #334155;
            font-size: 1.25rem;
            margin-top: 1.5rem;
            margin-bottom: 0.75rem;
            font-weight: 600;
        }
        
        .privacy-content p {
            color: #475569;
            line-height: 1.7;
            margin-bottom: 1rem;
            font-size: 1rem;
        }
        
        .privacy-content ul, .privacy-content ol {
            color: #475569;
            margin-bottom: 1.5rem;
            padding-left: 1.5rem;
        }
        
        .privacy-content li {
            margin-bottom: 0.5rem;
            line-height: 1.6;
        }
        
        /* Rights section - clean business style */
        .rights-section {
            margin: 2rem 0;
        }
        
        .rights-list {
            list-style: none;
            padding: 0;
            margin: 1.5rem 0;
        }
        
        .rights-list li {
            margin-bottom: 1.5rem;
            padding: 1rem 0;
            border-bottom: 1px solid #e2e8f0;
        }
        
        .rights-list li:last-child {
            border-bottom: none;
        }
        
        .rights-list h4 {
            color: #1e293b;
            font-size: 1.1rem;
            margin-bottom: 0.5rem;
            font-weight: 600;
        }
        
        .rights-list p {
            color: #475569;
            font-size: 1rem;
            margin-bottom: 0;
            line-height: 1.6;
            margin-left: 0;
        }
        
        .contact-highlight {
            background: #ffffff;
            border-left: 2px solid #dee2e6;
            padding: 2rem;
            margin: 2rem 0;
        }
        
        .contact-highlight ul {
            margin-bottom: 0;
            list-style: none;
            padding-left: 0;
        }
        
        .contact-highlight li {
            padding: 0.5rem 0;
            border-bottom: 1px solid #cbd5e1;
        }
        
        .contact-highlight li:last-child {
            border-bottom: none;
        }
        
        /* Cookies styles removed for cleaner business-oriented design */
            margin-bottom: 0.5rem;
            font-weight: 600;
        }
        
        /* Cookie type paragraph styles removed */
        
        .measures-section {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            margin: 1.5rem 0;
        }
        
        /* Measures card styles removed for cleaner business-oriented design */
        
        .last-updated {
            background: #f8f9fa;
            padding: 1.5rem;
            margin-top: 3rem;
            text-align: center;
            border-top: 1px solid #e0e0e0;
        }
        
        .last-updated strong {
            color: #1e293b;
            font-size: 1.1rem;
        }
        
        .btn-back {
            background: #f8f9fa;
            color: #333;
            padding: 0.75rem 1.5rem;
            border-radius: 4px;
            font-weight: 500;
            font-size: 1rem;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: background 0.2s ease;
            border: 1px solid #dee2e6;
            cursor: pointer;
        }
        
        .btn-back:hover {
            background: #e9ecef;
            text-decoration: none;
            color: white;
            text-decoration: none;
        }
        
        .highlight-box {
            background: #f8f9fa;
            border: 1px solid #e0e0e0;
            padding: 1rem;
            margin: 1rem 0;
        }
        
        .highlight-box p {
            color:rgb(10, 10, 10);
            margin-bottom: 0;
            font-weight: 500;
        }
        
        .gdpr-compliance {
            background: #ffffff;
            border: 1px solid #e0e0e0;
            padding: 1rem;
            margin: 1rem 0;
        }
        
        .gdpr-compliance p {
            color:rgb(10, 10, 10);
            margin-bottom: 0;
            font-weight: 500;
        }
        
        @media (max-width: 768px) {
            .privacy-content {
                padding: 1.5rem;
            }
            
            .privacy-hero h1 {
                font-size: 2rem;
            }
            
            .measures-section {
                grid-template-columns: 1fr;
            }
        }
    </style>
{% endblock %}

