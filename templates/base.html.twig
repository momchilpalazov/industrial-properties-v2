<!DOCTYPE html>
<html lang="{{ get_locale() }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Industrial Properties{% endblock %}</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="{{ asset('css/style.css') }}" rel="stylesheet">
    {% block stylesheets %}{% endblock %}
</head>
<body>
    <!-- Header -->
    <header class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
        <div class="container-fluid px-4">
            <a class="navbar-brand" href="{{ path('home') }}">Industrial Properties</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('property_list') }}">{{ 'nav.properties'|trans }}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('blog') }}">{{ 'nav.blog'|trans }}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('about') }}">{{ 'nav.about'|trans }}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('contact') }}">{{ 'nav.contact'|trans }}</a>
                    </li>
                </ul>
                <div class="d-flex align-items-center">
                    {% include 'partials/_language_switcher.html.twig' %}
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main>
        {% block body %}{% endblock %}
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-light py-4 mt-5">
        <div class="container-fluid px-4">
            <div class="row">
                <div class="col-md-4">
                    <h5>Industrial Properties</h5>
                    <p>{{ 'footer.description'|trans }}</p>
                </div>
                <div class="col-md-4">
                    <h5>{{ 'footer.quick_links'|trans }}</h5>
                    <ul class="list-unstyled">
                        <li><a href="{{ path('property_list') }}" class="text-light">{{ 'nav.properties'|trans }}</a></li>
                        <li><a href="{{ path('blog') }}" class="text-light">{{ 'nav.blog'|trans }}</a></li>
                        <li><a href="{{ path('about') }}" class="text-light">{{ 'nav.about'|trans }}</a></li>
                        <li><a href="{{ path('contact') }}" class="text-light">{{ 'nav.contact'|trans }}</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5>{{ 'footer.contact_us'|trans }}</h5>
                    <ul class="list-unstyled">
                        <li><i class="bi bi-telephone me-2"></i> +359 888 123 456</li>
                        <li><i class="bi bi-envelope me-2"></i> info@industrial-properties.com</li>
                        <li><i class="bi bi-geo-alt me-2"></i> Sofia, Bulgaria</li>
                    </ul>
                </div>
            </div>
            <hr class="mt-4">
            <div class="text-center">
                <p class="mb-0">&copy; {{ "now"|date("Y") }} Industrial Properties. {{ 'footer.rights'|trans }}</p>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="{{ asset('js/main.js') }}"></script>
    {% block javascripts %}{% endblock %}
</body>
</html> 