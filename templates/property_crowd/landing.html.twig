{% extends 'base.html.twig' %}

{% block title %}PropertyCrowd Europe - Join the Revolution{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Professional European styling */
        .hero-section {
            background: linear-gradient(135deg, #1E3A8A 0%, #059669 100%);
            color: white;
            padding: 100px 0;
            text-align: center;
        }
        
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 30px;
            margin: 50px 0;
        }
        
        .stat-card {
            background: white;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
            text-align: center;
        }
        
        .contributor-benefits {
            background: #F9FAFB;
            padding: 80px 0;
        }
        
        .benefit-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 40px;
            margin-top: 50px;
        }
        
        .benefit-card {
            background: white;
            padding: 40px;
            border-radius: 12px;
            border: 1px solid #E5E7EB;
        }
        
        .tier-showcase {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 20px;
            margin: 40px 0;
        }
        
        .tier-card {
            background: white;
            padding: 30px;
            border-radius: 12px;
            text-align: center;
            border: 2px solid #E5E7EB;
        }
        
        .tier-card.bronze { border-color: #CD7F32; }
        .tier-card.silver { border-color: #C0C0C0; }
        .tier-card.gold { border-color: #FFD700; }
        .tier-card.platinum { border-color: #E5E4E2; }
        .tier-card.diamond { border-color: #B9F2FF; }
        
        .cta-section {
            background: #374151;
            color: white;
            padding: 80px 0;
            text-align: center;
        }
        
        .btn-primary {
            background: #059669;
            border: none;
            padding: 15px 40px;
            font-size: 18px;
            border-radius: 8px;
            transition: all 0.3s;
        }
        
        .btn-primary:hover {
            background: #047857;
            transform: translateY(-2px);
        }
    </style>
{% endblock %}

{% block body %}
