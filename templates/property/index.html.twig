{% extends 'base.html.twig' %}

{% block title %}{{ 'property.list_title'|trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://js.api.here.com/v3/3.1/mapsjs-ui.css" />
    <style>
        .filter-section {
            background: #f8f9fa;
            padding: 2rem 0;
            margin-top: 56px;
        }
        .property-card {
            transition: transform 0.3s;
        }
        .property-card:hover {
            transform: translateY(-5px);
        }
        .property-image {
            height: 200px;
            object-fit: cover;
        }
        .property-features {
            list-style: none;
            padding: 0;
            margin: 0;
        }
        .property-features li {
            display: inline-block;
            margin-right: 1rem;
            color: #6c757d;
        }
        .property-features li i {
            margin-right: 0.5rem;
        }
        #propertiesMap {
            width: 100%;
            height: 500px;
            margin-top: 2rem;
            border-radius: 0.5rem;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }
        @keyframes pulse {
            0% {
                transform: scale(1);
                opacity: 1;
            }
            50% {
                transform: scale(1.2);
                opacity: 0.8;
            }
            100% {
                transform: scale(1);
                opacity: 1;
            }
        }
        .status-icon {
            display: inline-block;
            animation: pulse 2s infinite ease-in-out;
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Filter Section -->
    <section class="filter-section">
        <div class="container">
            {{ form_start(form, {'attr': {'class': 'row g-3'}}) }}
                <div class="col-md-4">
                    {{ form_row(form.type, {'attr': {'class': 'form-select'}}) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.min_price, {'attr': {'class': 'form-control', 'placeholder': 'Минимална цена'}}) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.max_price, {'attr': {'class': 'form-control', 'placeholder': 'Максимална цена'}}) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.min_area, {'attr': {'class': 'form-control', 'placeholder': 'Минимална площ'}}) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.max_area, {'attr': {'class': 'form-control', 'placeholder': 'Максимална площ'}}) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.location, {'attr': {'class': 'form-control', 'placeholder': 'Търсене по локация'}}) }}
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search"></i> Търсене
                    </button>
                    <a href="{{ path('app_property_index') }}" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Изчисти филтрите
                    </a>
                </div>
            {{ form_end(form) }}
        </div>
    </section>

    <!-- Properties List -->
    <section class="py-5">
        <div class="container">
            <div class="row g-4">
                {% for property in properties %}
                    <div class="col-md-4">
                        <div class="card h-100 property-card">
                            <a href="{{ path('app_property_show', {'id': property.id}) }}" class="text-decoration-none">
                                <div class="position-relative">
                                    {% if property.mainImage %}
                                        <img src="{{ asset('img/properties/' ~ property.id ~ '/' ~ property.mainImage.filename) }}" 
                                             class="card-img-top property-image" 
                                             alt="{{ property.title(app.request.locale) }}">
                                    {% else %}
                                        <img src="{{ asset('img/no-image.jpg') }}" 
                                             class="card-img-top property-image" 
                                             alt="No image">
                                    {% endif %}
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">{{ property.title(app.request.locale) }}</h5>
                                    <p class="card-text">
                                        <small class="text-muted d-block mb-2">
                                            <i class="bi bi-upc-scan"></i> {{ property.referenceNumber }}
                                        </small>
                                        <small class="text-muted">
                                            <i class="bi bi-geo-alt"></i> {{ property.location(app.request.locale) }}<br>
                                            <i class="bi bi-building"></i> {{ property.type.name }}<br>
                                            <i class="bi bi-arrows-angle-expand"></i> {{ property.area }} m²<br>
                                            {% if property.price %}
                                                <i class="bi bi-tag"></i> {{ property.price|number_format(0, '.', ' ') }} €<br>
                                            {% endif %}
                                            <i class="bi bi-circle-fill status-icon text-{{ property.status == 'available' ? 'success' : 
                                                property.status == 'sold' ? 'danger' : 
                                                property.status == 'reserved' ? 'warning' : 
                                                property.status == 'rented' ? 'info' : 'secondary' }}"></i>
                                            <span class="text-{{ property.status == 'available' ? 'success' : 
                                                property.status == 'sold' ? 'danger' : 
                                                property.status == 'reserved' ? 'warning' : 
                                                property.status == 'rented' ? 'info' : 'secondary' }}">
                                                {{ ('property.status.' ~ property.status)|trans }}
                                            </span>
                                        </small>
                                    </p>
                                </div>
                            </a>
                        </div>
                    </div>
                {% else %}
                    <div class="col-12">
                        <div class="alert alert-info">
                            {{ 'properties.list.no_results'|trans }}
                        </div>
                    </div>
                {% endfor %}
            </div>

            <!-- Pagination -->
            <div class="d-flex justify-content-center mt-4">
                {{ knp_pagination_render(properties) }}
            </div>

            <!-- Properties Map -->
            <div id="propertiesMap"></div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://js.api.here.com/v3/3.1/mapsjs-core.js"></script>
    <script src="https://js.api.here.com/v3/3.1/mapsjs-service.js"></script>
    <script src="https://js.api.here.com/v3/3.1/mapsjs-ui.js"></script>
    <script src="https://js.api.here.com/v3/3.1/mapsjs-mapevents.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize HERE Maps platform
            const platform = new H.service.Platform({
                'apikey': '{{ here_maps_api_key }}'
            });

            const defaultLayers = platform.createDefaultLayers();
            
            // Initialize map
            const map = new H.Map(
                document.getElementById('propertiesMap'),
                defaultLayers.vector.normal.map,
                {
                    zoom: 7,
                    center: { lat: 42.7339, lng: 25.4858 } // Center of Bulgaria
                }
            );

            // Enable map interaction (pan, zoom, etc.)
            const behavior = new H.mapevents.Behavior(new H.mapevents.MapEvents(map));
            const ui = H.ui.UI.createDefault(map, defaultLayers);

            // Add markers for each property
            {% for property in properties %}
                {% if property.latitude and property.longitude %}
                    const marker{{ property.id }} = new H.map.Marker({
                        lat: {{ property.latitude }},
                        lng: {{ property.longitude }}
                    });

                    // Create info bubble content
                    const bubbleContent = `
                        <div class="p-2">
                            <h6 class="mb-1">{{ property.title(app.request.locale) }}</h6>
                            <p class="mb-1"><small>{{ property.location(app.request.locale) }}</small></p>
                            <a href="{{ path('app_property_show', {'id': property.id}) }}" class="btn btn-sm btn-primary">
                                {{ 'property.actions.view'|trans }}
                            </a>
                        </div>
                    `;

                    // Add info bubble
                    marker{{ property.id }}.addEventListener('tap', function(evt) {
                        const bubble = new H.ui.InfoBubble(
                            evt.target.getGeometry(),
                            {
                                content: bubbleContent
                            }
                        );
                        ui.addBubble(bubble);
                    });

                    map.addObject(marker{{ property.id }});
                {% endif %}
            {% endfor %}

            // Handle window resize
            window.addEventListener('resize', () => map.getViewPort().resize());
        });
    </script>
{% endblock %} 