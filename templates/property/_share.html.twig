{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/property-share.css') }}">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
{% endblock %}

<div class="property-share">
    <button class="property-share-button facebook" data-share-type="facebook">
        <i class="bi bi-facebook"></i>
        Facebook
    </button>
    
    <button class="property-share-button twitter" data-share-type="twitter">
        <i class="bi bi-twitter"></i>
        Twitter
    </button>
    
    <button class="property-share-button linkedin" data-share-type="linkedin">
        <i class="bi bi-linkedin"></i>
        LinkedIn
    </button>
    
    <button class="property-share-button copy" data-share-type="copy">
        <i class="bi bi-link-45deg"></i>
        {{ 'property.share.copy_link'|trans }}
    </button>
</div>

<a href="{{ path('app_property_brochure', {'id': property.id}) }}" 
   class="btn btn-primary">
    <i class="bi bi-file-pdf"></i>
    {{ 'property.brochure.download'|trans }}
</a>

{% include 'property/_gallery.html.twig' with {'property': property} %}

{% include 'property/_map.html.twig' with {'property': property} %}

{% block javascripts %}
    <script src="{{ asset('js/property-share.js') }}"></script>
{% endblock %} 