{% extends 'admin/base.html.twig' %}

{% block title %}Нова оферта{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Създаване на нова оферта</h1>
            <a href="{{ path('admin_offer_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Назад към списъка
            </a>
        </div>

        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    Оферта за имот: {{ offer.property.titleBg }}
                    <small class="text-muted">({{ offer.property.referenceNumber }})</small>
                </h5>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-6">
                        <h6 class="mb-3">Информация за клиента</h6>
                        {{ form_row(form.customerName) }}
                        {{ form_row(form.email) }}
                        {{ form_row(form.phone) }}
                    </div>
                    <div class="col-md-6">
                        <h6 class="mb-3">Детайли за офертата</h6>
                        {{ form_row(form.price) }}
                        {{ form_row(form.status) }}
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Създай оферта
                    </button>
                    <a href="{{ path('admin_offer_index') }}" class="btn btn-secondary">
                        Отказ
                    </a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-header">
                <h5 class="card-title mb-0">Информация от запитването</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Име:</strong> {{ offer.inquiry.name }}</p>
                        <p><strong>Имейл:</strong> {{ offer.inquiry.email }}</p>
                        <p><strong>Телефон:</strong> {{ offer.inquiry.phone }}</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Съобщение:</strong></p>
                        <p class="text-muted">{{ offer.inquiry.message }}</p>
                        <p><strong>Дата на запитване:</strong> {{ offer.inquiry.createdAt|date('d.m.Y H:i') }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 