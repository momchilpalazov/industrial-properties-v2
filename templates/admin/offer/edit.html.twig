{% extends 'admin/base.html.twig' %}

{% block title %}Редактиране на оферта{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1>Редактиране на оферта</h1>

        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.customerName) }}
                        {{ form_row(form.email) }}
                        {{ form_row(form.phone) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.price) }}
                        {{ form_row(form.status) }}
                    </div>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">Запази</button>
                    <a href="{{ path('admin_offer_index') }}" class="btn btn-secondary">Отказ</a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %} 