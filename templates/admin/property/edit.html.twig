{% extends 'admin/base.html.twig' %}

{% block title %}Редактиране на имот{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />
    <style>
        .alert {
            margin-bottom: 1rem;
            padding: 1rem;
            border-radius: 0.5rem;
            border: none;
        }
        
        .alert-success {
            background-color: #d4edda;
            color: #155724;
        }
        
        .alert-error {
            background-color: #f8d7da;
            color: #721c24;
        }
        
        .alert-dismissible .btn-close {
            padding: 1.25rem;
        }
        
        .property-form {
            max-width: 1200px;
            margin: 0 auto;
        }
        
        .form-section {
            background: #fff;
            border-radius: 0.5rem;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            padding: 1.5rem;
            margin-bottom: 1.5rem;
        }
        
        .form-section-title {
            color: #2c3e50;
            border-bottom: 2px solid #e9ecef;
            padding-bottom: 0.75rem;
            margin-bottom: 1.5rem;
        }
        
        .nav-tabs {
            border-bottom: 2px solid #e9ecef;
        }
        
        .nav-tabs .nav-link {
            border: none;
            color: #6c757d;
            padding: 0.75rem 1rem;
            margin-bottom: -2px;
        }
        
        .nav-tabs .nav-link.active {
            color: #2c3e50;
            border-bottom: 2px solid #3498db;
        }
        
        #locationMap {
            width: 100%;
            height: 400px;
            border-radius: 0.5rem;
            margin-bottom: 1rem;
            border: 1px solid #e9ecef;
            background-color: #f8f9fa;
            position: relative;
            overflow: hidden;
        }
        
        .coordinates-wrapper {
            display: flex;
            gap: 1rem;
            margin-bottom: 1rem;
        }
        
        .coordinates-wrapper .form-group {
            flex: 1;
        }
        
        .form-control:focus {
            border-color: #3498db;
            box-shadow: 0 0 0 0.2rem rgba(52, 152, 219, 0.25);
        }
        
        .btn-primary {
            background-color: #3498db;
            border-color: #3498db;
        }
        
        .btn-primary:hover {
            background-color: #2980b9;
            border-color: #2980b9;
        }
        
        .form-check-input:checked {
            background-color: #3498db;
            border-color: #3498db;
        }
        
        .expose-section {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            margin-top: 20px;
            border: 1px solid #dee2e6;
        }
        
        .expose-section .form-group {
            margin-bottom: 1rem;
        }
        
        .expose-section label {
            font-weight: 500;
            color: #495057;
        }
        
        .expose-section .help-block {
            font-size: 0.875rem;
            color: #6c757d;
            margin-top: 0.25rem;
        }
        
        .expose-section .form-control {
            border: 1px solid #ced4da;
        }
        
        .expose-section .form-control:focus {
            border-color: #80bdff;
            box-shadow: 0 0 0 0.2rem rgba(0,123,255,.25);
        }
        
        .pdf-list {
            margin-top: 1rem;
        }
        
        .pdf-item {
            display: flex;
            align-items: center;
            padding: 0.5rem;
            background: #f8f9fa;
            border-radius: 0.25rem;
            margin-bottom: 0.5rem;
        }
        
        .pdf-item i {
            margin-right: 0.5rem;
            color: #dc3545;
        }
        
        .pdf-item a {
            margin-right: 1rem;
            color: #0d6efd;
            text-decoration: none;
        }
        
        .pdf-item a:hover {
            text-decoration: underline;
        }
        
        .delete-pdf-btn {
            margin-left: auto;
            padding: 0.25rem 0.5rem;
            font-size: 0.875rem;
        }
        
        /* Стилове за падащото меню с типове имоти */
        .property-type-select optgroup {
            font-weight: bold;
            color: #3498db;
            background-color: #f8f9fa;
        }
        
        .property-type-select option[value=""] {
            font-weight: bold;
            font-style: italic;
        }
        
        .property-type-select option {
            padding: 5px;
        }
        
        .property-type-select option:hover {
            background-color: #e9ecef;
        }
        
        /* Стилове за Select2 с типове имоти */
        .select2-container--bootstrap-5 .select2-results__option {
            padding: 6px 12px;
            font-size: 0.9rem;
        }
        
        .select2-container--bootstrap-5 .select2-results__group {
            padding: 8px 12px;
            font-weight: bold;
            color: #3498db;
            background-color: #f8f9fa;
            border-bottom: 1px solid #dee2e6;
        }
        
        .select2-container--bootstrap-5 .child-option {
            padding-left: 25px;
            position: relative;
        }
        
        .select2-container--bootstrap-5 .child-option:before {
            content: "—";
            position: absolute;
            left: 10px;
            color: #6c757d;
        }
        
        .select2-container--bootstrap-5 .select2-dropdown {
            border-color: #80bdff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }
        
        /* Стилове за автоматичното предлагане на адреси */
        .address-suggestions {
            position: absolute;
            z-index: 1000;
            width: 100%;
            max-height: 300px;
            overflow-y: auto;
            background-color: white;
            border: 1px solid #ced4da;
            border-radius: 0.25rem;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            display: none;
        }
        
        .address-suggestion-item {
            padding: 10px 15px;
            cursor: pointer;
            border-bottom: 1px solid #f0f0f0;
        }
        
        .address-suggestion-item:hover,
        .address-suggestion-item.active {
            background-color: #f8f9fa;
        }
        
        .address-suggestion-item .main-text {
            font-weight: 500;
        }
        
        .address-suggestion-item .secondary-text {
            font-size: 0.85em;
            color: #6c757d;
        }
        
        .address-input-wrapper {
            position: relative;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="property-form">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 mb-0">Редактиране на имот</h1>
            <div>
                <a href="{{ path('admin_property_images', {'id': property.id}) }}" class="btn btn-primary me-2">
                    <i class="bi bi-images"></i> Управление на снимки
                </a>
                <a href="{{ path('admin_property_index') }}" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Назад към списъка
                </a>
            </div>
        </div>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        {{ form_start(form) }}
        
        <!-- Основна информация -->
        <div class="form-section">
            <h4 class="form-section-title">
                <i class="bi bi-info-circle"></i> Основна информация
            </h4>
            
            <div class="row mb-4">
                <div class="col-md-6">
                    {{ form_row(form.type) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.area) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.price) }}
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-check mb-3">
                        {{ form_widget(form.isActive) }}
                        {{ form_label(form.isActive) }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-check mb-3">
                        {{ form_widget(form.isFeatured) }}
                        {{ form_label(form.isFeatured) }}
                    </div>
                </div>
            </div>
        </div>

        <!-- Описание на различни езици -->
        <div class="form-section">
            <h4 class="form-section-title">
                <i class="bi bi-translate"></i> Описание на различни езици
            </h4>
            
            <ul class="nav nav-tabs mb-4" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" data-bs-toggle="tab" href="#bg">
                        <i class="bi bi-globe"></i> Български
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#en">
                        <i class="bi bi-globe"></i> English
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#de">
                        <i class="bi bi-globe"></i> Deutsch
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#ru">
                        <i class="bi bi-globe"></i> Русский
                    </a>
                </li>
            </ul>

            <div class="tab-content">
                <div class="tab-pane fade show active" id="bg">
                    {{ form_row(form.titleBg) }}
                    {{ form_row(form.descriptionBg) }}
                    {{ form_row(form.locationBg) }}
                </div>
                <div class="tab-pane fade" id="en">
                    {{ form_row(form.titleEn) }}
                    {{ form_row(form.descriptionEn) }}
                    {{ form_row(form.locationEn) }}
                </div>
                <div class="tab-pane fade" id="de">
                    {{ form_row(form.titleDe) }}
                    {{ form_row(form.descriptionDe) }}
                    {{ form_row(form.locationDe) }}
                </div>
                <div class="tab-pane fade" id="ru">
                    {{ form_row(form.titleRu) }}
                    {{ form_row(form.descriptionRu) }}
                    {{ form_row(form.locationRu) }}
                </div>
            </div>
        </div>

        <!-- Локация -->
        <div class="form-section">
            <h4 class="form-section-title">
                <i class="bi bi-geo-alt"></i> Локация
            </h4>
            
            <div class="mb-3">
                {{ form_label(form.address) }}
                <div class="address-input-wrapper">
                <div class="input-group">
                        {{ form_widget(form.address, {'attr': {'class': 'form-control', 'autocomplete': 'off'}}) }}
                    <button class="btn btn-outline-primary" type="button" id="geocodeAddress">
                        <i class="bi bi-search"></i> Намери координати
                    </button>
                    </div>
                    <div id="addressSuggestions" class="address-suggestions"></div>
                </div>
                <small class="form-text text-muted">Въведете адрес във формат: улица и номер, град, държава. За по-точни резултати включете пощенски код.</small>
                {{ form_errors(form.address) }}
                <div id="geocodeResults" class="mt-2" style="display: none;">
                    <p class="mb-1">Намерени резултати:</p>
                    <ul id="geocodeResultsList" class="list-group"></ul>
                </div>
            </div>

            <div id="locationMap"></div>

            <div class="coordinates-wrapper">
                <div class="form-group">
                    {{ form_row(form.latitude) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.longitude) }}
                </div>
            </div>
        </div>

        <!-- PDF Expose -->
        <div class="form-section">
            <h4 class="form-section-title">
                <i class="bi bi-file-pdf"></i> PDF Файлове
            </h4>
            
            {{ form_row(form.expose.exposeFile) }}
            
            {% if property.pdfs is not empty %}
                <div class="pdf-list">
                    {% for pdf in property.pdfs %}
                        <div class="pdf-item" id="pdf-{{ pdf.id }}">
                            <i class="bi bi-file-pdf"></i>
                            <a href="{{ asset('uploads/expose/' ~ pdf.filename) }}" target="_blank">
                                {{ pdf.filename }}
                            </a>
                            <button type="button" class="btn btn-danger btn-sm delete-pdf-btn" data-pdf-id="{{ pdf.id }}">
                                <i class="bi bi-trash"></i> Изтрий
                            </button>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>

        {{ form_rest(form) }}

        <!-- Бутони -->
        <div class="form-section">
            <div class="d-flex justify-content-end gap-2">
                <a href="{{ path('admin_property_index') }}" class="btn btn-outline-secondary">
                    <i class="bi bi-x"></i> Отказ
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-lg"></i> Запази промените
                </button>
            </div>
        </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/@ckeditor/ckeditor5-build-classic/build/ckeditor.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin=""/>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // CKEditor initialization
            const editors = ['descriptionBg', 'descriptionEn', 'descriptionDe', 'descriptionRu'];
            
            editors.forEach(function(editorId) {
                const element = document.querySelector('#property_' + editorId);
                if (element) {
                    ClassicEditor
                        .create(element, {
                            toolbar: [
                                'heading',
                                '|',
                                'bold',
                                'italic',
                                'link',
                                'bulletedList',
                                'numberedList',
                                '|',
                                'undo',
                                'redo'
                            ],
                            heading: {
                                options: [
                                    { model: 'paragraph', title: 'Paragraph', class: 'ck-heading_paragraph' },
                                    { model: 'heading1', view: 'h1', title: 'Heading 1', class: 'ck-heading_heading1' },
                                    { model: 'heading2', view: 'h2', title: 'Heading 2', class: 'ck-heading_heading2' }
                                ]
                            }
                        })
                        .then(editor => {
                            window[`editor_${editorId}`] = editor;
                        })
                        .catch(error => {
                            console.error(error);
                        });
                }
            });

            // Инициализираме Select2 за по-добра визуализация на типовете имоти
            $('.property-type-select').select2({
                theme: 'bootstrap-5',
                width: '100%',
                placeholder: 'Изберете тип имот',
                allowClear: true,
                templateResult: formatPropertyType,
                escapeMarkup: function(markup) {
                    return markup;
                }
            });
            
            // Форматиране на опциите в падащото меню с дървовидна структура
            function formatPropertyType(state) {
                if (!state.id) {
                    return state.text; // Placeholder
                }
                
                let text = state.text;
                let level = 0;
                let icon = '';
                
                // Определяме нивото на вложеност и съответната икона
                if (text.startsWith('— ')) {
                    level = 1;
                    text = text.substring(2);
                    icon = '<i class="bi bi-house-door text-success me-1"></i>';
                } else {
                    // Това е основен тип
                    icon = '<i class="bi bi-building text-primary me-1"></i>';
                }
                
                // Проверяваме дали има родителска група (категория)
                const optgroup = $(state.element).parent('optgroup');
                if (optgroup.length) {
                    const categoryName = optgroup.attr('label');
                    
                    // Определяме цвета според категорията
                    let categoryColor = '#0d6efd'; // син по подразбиране
                    
                    if (categoryName === 'Продажба') {
                        categoryColor = '#198754'; // зелен
                    } else if (categoryName === 'Под наем') {
                        categoryColor = '#dc3545'; // червен
                    } else if (categoryName === 'Инвестиция') {
                        categoryColor = '#fd7e14'; // оранжев
                    } else if (categoryName === 'Без категория') {
                        categoryColor = '#6c757d'; // сив
                    }
                    
                    // Ако е в категория, добавяме индикация
                    if (level === 0) {
                        // Основен тип в категория
                        return '<div class="select2-option-with-category">' +
                               '<div class="select2-option-category-indicator" style="color: ' + categoryColor + '; font-weight: 600;">' +
                               icon + text + '</div>' +
                               '<small class="text-muted ms-2">(' + categoryName + ')</small>' +
                               '</div>';
                    } else {
                        // Подтип в категория
                        return '<div class="select2-option-with-category" style="padding-left: 20px;">' +
                               '<div class="select2-option-category-indicator" style="color: ' + categoryColor + ';">' +
                               '<span style="display: inline-block; width: 10px; border-top: 1px solid #adb5bd; margin-right: 5px;"></span>' +
                               icon + text + '</div>' +
                               '<small class="text-muted ms-2">(' + categoryName + ')</small>' +
                               '</div>';
                    }
                }
                
                // Форматиране според нивото на вложеност
                if (level === 0) {
                    return '<div class="select2-option-main">' + icon + text + '</div>';
                } else {
                    return '<div class="select2-option-child" style="padding-left: 20px;">' +
                           '<span style="display: inline-block; width: 10px; border-top: 1px solid #adb5bd; margin-right: 5px;"></span>' +
                           icon + text + '</div>';
                }
            }
            
            // Добавяме CSS стилове за Select2 опциите
            $('<style>')
                .prop('type', 'text/css')
                .html(`
                    .select2-container--bootstrap-5 .select2-results__option {
                        padding: 6px 12px;
                        font-size: 0.9rem;
                    }
                    
                    .select2-container--bootstrap-5 .select2-results__group {
                        padding: 8px 12px;
                        font-weight: bold;
                        color: #0d6efd;
                        background-color: #e6f2ff;
                        border-bottom: 1px solid #aec7e8;
                    }
                    
                    .select2-container--bootstrap-5 .select2-results__group:nth-child(1) {
                        background-color: #e6f2ff; /* Син за първата категория */
                        color: #0d6efd;
                    }
                    
                    .select2-container--bootstrap-5 .select2-results__group:nth-child(3) {
                        background-color: #e6fff0; /* Зелен за втората категория */
                        color: #198754;
                    }
                    
                    .select2-container--bootstrap-5 .select2-results__group:nth-child(5) {
                        background-color: #fff0f0; /* Червен за третата категория */
                        color: #dc3545;
                    }
                    
                    .select2-container--bootstrap-5 .select2-results__group:nth-child(7) {
                        background-color: #fff8e6; /* Оранжев за четвъртата категория */
                        color: #fd7e14;
                    }
                    
                    .select2-container--bootstrap-5 .select2-results__group:last-child {
                        background-color: #f8f9fa; /* Сив за "Без категория" */
                        color: #6c757d;
                    }
                    
                    .select2-container--bootstrap-5 .select2-results__option--highlighted {
                        background-color: #f0f4f8 !important;
                        color: #212529 !important;
                    }
                    
                    .select2-container--bootstrap-5 .select2-results__option--selected {
                        background-color: #e6f2ff !important;
                        color: #0d6efd !important;
                    }
                    
                    .select2-option-main {
                        font-weight: 500;
                    }
                    
                    .select2-option-child {
                        position: relative;
                    }
                    
                    .select2-option-with-category {
                        display: flex;
                        align-items: center;
                    }
                    
                    .select2-option-category-indicator {
                        display: flex;
                        align-items: center;
                    }
                `)
                .appendTo('head');
                
            // Проверяваме дали елементите съществуват
            const latitudeField = document.getElementById('property_latitude');
            const longitudeField = document.getElementById('property_longitude');
            const mapElement = document.getElementById('locationMap');
            const addressField = document.getElementById('property_address');
            const geocodeButton = document.getElementById('geocodeAddress');
            const geocodeResults = document.getElementById('geocodeResults');
            const geocodeResultsList = document.getElementById('geocodeResultsList');
            const addressSuggestions = document.getElementById('addressSuggestions');
            
            if (!latitudeField || !longitudeField || !mapElement) {
                console.error('Не са намерени необходимите елементи за картата');
                return;
            }
            
            // Задаваме начални стойности за координатите
            let latitude = latitudeField.value || 42.7339;
            let longitude = longitudeField.value || 25.4858;
            
            // Инициализираме OpenStreetMap
            const map = L.map('locationMap').setView([latitude, longitude], 8);
            
            // Добавяме слой с плочки от OpenStreetMap
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
            }).addTo(map);
            
            // Добавяме маркер
            let marker = L.marker([latitude, longitude], {
                draggable: true
            }).addTo(map);
            
            // Добавяме попъп с информация
            marker.bindPopup(`<div>
                <strong>Координати:</strong><br>
                Lat: ${latitude}<br>
                Lng: ${longitude}
            </div>`);
            
            // Актуализираме координатите при преместване на маркера
            marker.on('dragend', function(e) {
                const position = marker.getLatLng();
                latitudeField.value = position.lat.toFixed(6);
                longitudeField.value = position.lng.toFixed(6);
                
                // Актуализираме попъпа
                marker.setPopupContent(`<div>
                    <strong>Координати:</strong><br>
                    Lat: ${position.lat.toFixed(6)}<br>
                    Lng: ${position.lng.toFixed(6)}
                </div>`);
                
                marker.openPopup();
            });
            
            // Функция за намиране на координати по адрес
            function findCoordinates(address) {
                if (!address) {
                    alert('Моля, въведете адрес');
                    return;
                }
                
                // Показваме индикатор за зареждане
                geocodeButton.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Търсене...';
                geocodeButton.disabled = true;
                
                // Използваме OpenStreetMap Nominatim API за геокодиране
                fetch(`https://nominatim.openstreetmap.org/search?format=json&q=${encodeURIComponent(address)}&limit=5`)
                    .then(response => response.json())
                    .then(data => {
                        console.log('Резултат от геокодиране:', data);
                        
                        if (data && data.length > 0) {
                            // Показваме първия резултат на картата
                            const firstResult = data[0];
                            const coords = {
                                lat: parseFloat(firstResult.lat),
                                lng: parseFloat(firstResult.lon)
                            };
                            
                            // Актуализираме полетата за координати
                            latitudeField.value = coords.lat.toFixed(6);
                            longitudeField.value = coords.lng.toFixed(6);
                            
                            // Актуализираме маркера и центрираме картата
                            marker.setLatLng(coords);
                            map.setView(coords, 15);
                            
                            // Актуализираме попъпа
                            marker.setPopupContent(`<div>
                                <strong>Адрес:</strong> ${firstResult.display_name}<br>
                                <strong>Координати:</strong><br>
                                Lat: ${coords.lat.toFixed(6)}<br>
                                Lng: ${coords.lng.toFixed(6)}
                            </div>`);
                            
                            marker.openPopup();
                            
                            // Показваме всички резултати, ако има повече от един
                            if (data.length > 1) {
                                // Изчистваме предишните резултати
                                geocodeResultsList.innerHTML = '';
                                
                                // Добавяме всеки резултат като опция
                                data.forEach((item, index) => {
                                    const li = document.createElement('li');
                                    li.className = 'list-group-item list-group-item-action' + (index === 0 ? ' active' : '');
                                    
                                    // Форматираме адреса
                                    li.innerHTML = item.display_name;
                                    
                                    // Добавяме обработчик на събития
                                    li.addEventListener('click', function() {
                                        // Премахваме активния клас от всички елементи
                                        geocodeResultsList.querySelectorAll('li').forEach(el => el.classList.remove('active'));
                                        // Добавяме активен клас към текущия елемент
                                        this.classList.add('active');
                                        
                                        // Актуализираме картата и полетата
                                        const itemCoords = {
                                            lat: parseFloat(item.lat),
                                            lng: parseFloat(item.lon)
                                        };
                                        
                                        // Актуализираме маркера и центрираме картата
                                        marker.setLatLng(itemCoords);
                                        map.setView(itemCoords, 15);
                                        
                                        // Актуализираме полетата за координати
                                        latitudeField.value = itemCoords.lat.toFixed(6);
                                        longitudeField.value = itemCoords.lng.toFixed(6);
                                        
                                        // Актуализираме попъпа
                                        marker.setPopupContent(`<div>
                                            <strong>Адрес:</strong> ${item.display_name}<br>
                                            <strong>Координати:</strong><br>
                                            Lat: ${itemCoords.lat.toFixed(6)}<br>
                                            Lng: ${itemCoords.lng.toFixed(6)}
                                        </div>`);
                                        
                                        marker.openPopup();
                                    });
                                    
                                    geocodeResultsList.appendChild(li);
                                });
                                
                                // Показваме контейнера с резултати
                                geocodeResults.style.display = 'block';
                            } else {
                                // Скриваме контейнера с резултати, ако има само един резултат
                                geocodeResults.style.display = 'none';
                            }
                        } else {
                            console.error('Не са намерени резултати за адрес:', address);
                            alert('Не можахме да намерим координатите за този адрес. Моля, опитайте с по-точен адрес или въведете координатите ръчно.');
                            // Скриваме контейнера с резултати
                            geocodeResults.style.display = 'none';
                        }
                        
                        // Възстановяваме бутона
                        geocodeButton.innerHTML = '<i class="bi bi-search"></i> Намери координати';
                        geocodeButton.disabled = false;
                    })
                    .catch(error => {
                        console.error('Грешка при геокодиране:', error);
                        alert('Възникна грешка при търсенето на координати: ' + error.message);
                        
                        // Възстановяваме бутона
                        geocodeButton.innerHTML = '<i class="bi bi-search"></i> Намери координати';
                        geocodeButton.disabled = false;
                    });
            }
            
            // Функция за търсене на предложения за адреси
            let searchTimeout;
            function searchAddressSuggestions(query) {
                if (!query || query.length < 3) {
                    addressSuggestions.style.display = 'none';
                    return;
                }
                
                // Изчакваме малко преди да изпратим заявката, за да избегнем твърде много заявки
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(() => {
                    // Използваме OpenStreetMap Nominatim API за предложения
                    fetch(`https://nominatim.openstreetmap.org/search?format=json&q=${encodeURIComponent(query)}&limit=5`)
                        .then(response => response.json())
                        .then(data => {
                            // Изчистваме предишните предложения
                            addressSuggestions.innerHTML = '';
                            
                            if (data && data.length > 0) {
                                // Добавяме всеки резултат като предложение
                                data.forEach(item => {
                                    const suggestionItem = document.createElement('div');
                                    suggestionItem.className = 'address-suggestion-item';
                                    
                                    // Форматираме адреса
                                    const parts = item.display_name.split(', ');
                                    const mainPart = parts.slice(0, 2).join(', ');
                                    const secondaryPart = parts.slice(2).join(', ');
                                    
                                    suggestionItem.innerHTML = `
                                        <div class="main-text">${mainPart}</div>
                                        <div class="secondary-text">${secondaryPart}</div>
                                    `;
                                    
                                    // Добавяме обработчик на събития
                                    suggestionItem.addEventListener('click', function() {
                                        // Задаваме адреса в полето
                                        addressField.value = item.display_name;
                                        
                                        // Скриваме предложенията
                                        addressSuggestions.style.display = 'none';
                                        
                                        // Актуализираме координатите и картата
                                        const coords = {
                                            lat: parseFloat(item.lat),
                                            lng: parseFloat(item.lon)
                                        };
                                        
                                        // Актуализираме полетата за координати
                                        latitudeField.value = coords.lat.toFixed(6);
                                        longitudeField.value = coords.lng.toFixed(6);
                                        
                                        // Актуализираме маркера и центрираме картата
                                        marker.setLatLng(coords);
                                        map.setView(coords, 15);
                                        
                                        // Актуализираме попъпа
                                        marker.setPopupContent(`<div>
                                            <strong>Адрес:</strong> ${item.display_name}<br>
                                            <strong>Координати:</strong><br>
                                            Lat: ${coords.lat.toFixed(6)}<br>
                                            Lng: ${coords.lng.toFixed(6)}
                                        </div>`);
                                        
                                        marker.openPopup();
                                    });
                                    
                                    addressSuggestions.appendChild(suggestionItem);
                                });
                                
                                // Показваме контейнера с предложения
                                addressSuggestions.style.display = 'block';
                            } else {
                                // Скриваме контейнера с предложения, ако няма резултати
                                addressSuggestions.style.display = 'none';
                            }
                        })
                        .catch(error => {
                            console.error('Грешка при търсене на предложения:', error);
                            addressSuggestions.style.display = 'none';
                        });
                }, 300); // Изчакваме 300ms преди да изпратим заявката
            }
            
            // Добавяме слушател за бутона за намиране на координати
            if (geocodeButton) {
                geocodeButton.addEventListener('click', function() {
                    findCoordinates(addressField.value);
                });
            }
            
            // Добавяме слушател за въвеждане в полето за адрес
            if (addressField) {
                addressField.addEventListener('input', function() {
                    searchAddressSuggestions(this.value);
                });
                
                // Обработка на клавиша Enter в полето за адрес
                addressField.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {
                        e.preventDefault();
                        
                        // Ако има видими предложения, избираме първото
                        if (addressSuggestions.style.display === 'block' && addressSuggestions.children.length > 0) {
                            addressSuggestions.children[0].click();
                        } else {
                            findCoordinates(this.value);
                        }
                    }
                });
                
                // Обработка на клавишите стрелка нагоре/надолу за навигация в предложенията
                addressField.addEventListener('keydown', function(e) {
                    if (addressSuggestions.style.display === 'block') {
                        const items = addressSuggestions.querySelectorAll('.address-suggestion-item');
                        let activeIndex = -1;
                        
                        // Намираме активния елемент
                        items.forEach((item, index) => {
                            if (item.classList.contains('active')) {
                                activeIndex = index;
                            }
                        });
                        
                        if (e.key === 'ArrowDown') {
                            e.preventDefault();
                            
                            // Премахваме активния клас от текущия елемент
                            if (activeIndex >= 0) {
                                items[activeIndex].classList.remove('active');
                            }
                            
                            // Избираме следващия елемент или първия, ако сме в края
                            activeIndex = (activeIndex + 1) % items.length;
                            items[activeIndex].classList.add('active');
                            items[activeIndex].scrollIntoView({ block: 'nearest' });
                        } else if (e.key === 'ArrowUp') {
                            e.preventDefault();
                            
                            // Премахваме активния клас от текущия елемент
                            if (activeIndex >= 0) {
                                items[activeIndex].classList.remove('active');
                            }
                            
                            // Избираме предишния елемент или последния, ако сме в началото
                            activeIndex = (activeIndex - 1 + items.length) % items.length;
                            items[activeIndex].classList.add('active');
                            items[activeIndex].scrollIntoView({ block: 'nearest' });
                        } else if (e.key === 'Escape') {
                            // Скриваме предложенията при натискане на Escape
                            addressSuggestions.style.display = 'none';
                        } else if (e.key === 'Tab') {
                            // Скриваме предложенията при натискане на Tab
                            addressSuggestions.style.display = 'none';
                        }
                    }
                });
                
                // Скриваме предложенията при клик извън полето
                document.addEventListener('click', function(e) {
                    if (!addressField.contains(e.target) && !addressSuggestions.contains(e.target)) {
                        addressSuggestions.style.display = 'none';
                    }
                });
            }
            
            // Добавяме слушател за клик върху картата
            map.on('click', function(e) {
                const coords = e.latlng;
                
                // Актуализираме полетата за координати
                latitudeField.value = coords.lat.toFixed(6);
                longitudeField.value = coords.lng.toFixed(6);
                
                // Актуализираме маркера
                marker.setLatLng(coords);
                
                // Актуализираме попъпа
                marker.setPopupContent(`<div>
                    <strong>Координати:</strong><br>
                    Lat: ${coords.lat.toFixed(6)}<br>
                    Lng: ${coords.lng.toFixed(6)}
                </div>`);
                
                marker.openPopup();
            });
            
            // Обработка на промяна на размера на прозореца
            window.addEventListener('resize', function() {
                map.invalidateSize();
            });
        });
    </script>
