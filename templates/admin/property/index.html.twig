{% extends 'admin/base.html.twig' %}

{% block title %}Имоти{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .property-card {
            height: 100%;
            transition: transform 0.2s;
        }
        .property-card:hover {
            transform: translateY(-5px);
        }
        .property-image {
            height: 200px;
            object-fit: cover;
            border-top-left-radius: calc(0.375rem - 1px);
            border-top-right-radius: calc(0.375rem - 1px);
        }
        .property-features {
            display: flex;
            gap: 1rem;
            font-size: 0.875rem;
            color: #6c757d;
            margin-bottom: 0.5rem;
        }
        .property-feature {
            display: flex;
            align-items: center;
            gap: 0.25rem;
        }
        .property-actions {
            position: absolute;
            top: 0.5rem;
            right: 0.5rem;
            display: flex;
            gap: 0.5rem;
        }
        .property-status {
            position: absolute;
            top: 0.5rem;
            left: 0.5rem;
            padding: 0.25rem 0.5rem;
            border-radius: 0.25rem;
            font-size: 0.75rem;
            font-weight: 500;
        }
        .status-available {
            background-color: var(--bs-success);
            color: white;
        }
        .status-unavailable {
            background-color: var(--bs-danger);
            color: white;
        }
        .property-type {
            position: absolute;
            bottom: 0.5rem;
            right: 0.5rem;
            padding: 0.25rem 0.5rem;
            border-radius: 0.25rem;
            font-size: 0.75rem;
            background-color: rgba(0,0,0,0.5);
            color: white;
        }
        .pagination {
            margin-top: 2rem;
            justify-content: center;
        }
        .pagination .page-item.active .page-link {
            background-color: var(--bs-primary);
            border-color: var(--bs-primary);
        }
        .pagination .page-link {
            color: var(--bs-primary);
        }
        .table th {
            background-color: #f8f9fa;
            font-weight: 500;
        }
        .table td {
            vertical-align: middle;
        }
        .form-switch {
            padding-left: 2.5em;
        }
        .form-switch .form-check-input {
            width: 3em;
        }
        .btn-group {
            gap: 0.25rem;
        }
        .dropdown-toggle::after {
            display: none;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
        <h1 class="h2">Имоти</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <a href="{{ path('admin_property_new') }}" class="btn btn-sm btn-primary">
                <i class="bi bi-plus-lg"></i> Нов имот
            </a>
        </div>
    </div>

    <!-- Филтри -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label for="type" class="form-label">Тип имот</label>
                    <select name="type" id="type" class="form-select">
                        <option value="">Всички</option>
                        <option value="industrial_land" {% if app.request.query.get('type') == 'industrial_land' %}selected{% endif %}>
                            Индустриален парцел
                        </option>
                        <option value="industrial_building" {% if app.request.query.get('type') == 'industrial_building' %}selected{% endif %}>
                            Индустриална сграда
                        </option>
                        <option value="logistics_center" {% if app.request.query.get('type') == 'logistics_center' %}selected{% endif %}>
                            Логистичен център
                        </option>
                        <option value="warehouse" {% if app.request.query.get('type') == 'warehouse' %}selected{% endif %}>
                            Склад
                        </option>
                        <option value="production_facility" {% if app.request.query.get('type') == 'production_facility' %}selected{% endif %}>
                            Производствена база
                        </option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="location" class="form-label">Локация</label>
                    <input type="text" 
                           class="form-control" 
                           id="location" 
                           name="location" 
                           value="{{ app.request.query.get('location') }}"
                           placeholder="Търси по локация">
                </div>
                <div class="col-md-3">
                    <label for="status" class="form-label">Статус</label>
                    <select name="status" id="status" class="form-select">
                        <option value="">Всички</option>
                        <option value="available" {% if app.request.query.get('status') == 'available' %}selected{% endif %}>
                            Свободен
                        </option>
                        <option value="unavailable" {% if app.request.query.get('status') == 'unavailable' %}selected{% endif %}>
                            Зает
                        </option>
                    </select>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Търси
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Списък с имоти -->
    <div class="card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th style="width: 40px">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="selectAll">
                                </div>
                            </th>
                            <th style="width: 50px">ID</th>
                            <th style="width: 150px">Референтен номер</th>
                            <th style="width: 120px">Снимка</th>
                            <th>Заглавие</th>
                            <th>Референция</th>
                            <th>Категория</th>
                            <th>Цена без ДДС</th>
                            <th>Цена с ДДС</th>
                            <th>Количество</th>
                            <th style="width: 100px">Статус</th>
                            <th style="width: 120px">Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for property in properties %}
                            <tr>
                                <td>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="{{ property.id }}">
                                    </div>
                                </td>
                                <td>{{ property.id }}</td>
                                <td>{{ property.referenceNumber }}</td>
                                <td>
                                    {% if property.mainImage %}
                                        <img src="{{ asset('img/properties/' ~ property.id ~ '/' ~ property.mainImage.filename) }}" 
                                             alt="{{ property.titleBg }}"
                                             style="width: 100px; height: 60px; object-fit: cover;"
                                             class="rounded">
                                    {% else %}
                                        <img src="{{ asset('img/no-image.jpg') }}" 
                                             alt="No image"
                                             style="width: 100px; height: 60px; object-fit: cover;"
                                             class="rounded">
                                    {% endif %}
                                </td>
                                <td>
                                    <div>{{ property.titleBg }}</div>
                                    <small class="text-muted">
                                        <i class="bi bi-geo-alt"></i> {{ property.locationBg }}
                                    </small>
                                </td>
                                <td>{{ property.id }}</td>
                                <td>{{ property.type }}</td>
                                <td>{{ property.price ? property.price|number_format(2, '.', ' ') : '-' }}</td>
                                <td>{{ property.price ? (property.price * 1.2)|number_format(2, '.', ' ') : '-' }}</td>
                                <td>{{ property.area ? property.area|number_format(0) : '-' }}</td>
                                <td>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" role="switch" 
                                               {% if property.isActive %}checked{% endif %}
                                               data-property-id="{{ property.id }}"
                                               onchange="togglePropertyStatus(this)">
                                    </div>
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a href="{{ path('admin_property_edit', {'id': property.id}) }}" 
                                           class="btn btn-sm btn-outline-primary"
                                           title="Редактирай">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a href="{{ path('admin_property_images', {'id': property.id}) }}" 
                                           class="btn btn-sm btn-outline-info"
                                           title="Снимки">
                                            <i class="bi bi-images"></i>
                                        </a>
                                        <button type="button" 
                                                class="btn btn-sm btn-outline-secondary dropdown-toggle"
                                                data-bs-toggle="dropdown"
                                                aria-expanded="false">
                                            <i class="bi bi-three-dots-vertical"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            <li>
                                                <form action="{{ path('admin_property_delete', {'id': property.id}) }}" 
                                                      method="post" 
                                                      onsubmit="return confirm('Сигурни ли сте, че искате да изтриете този имот?');">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ property.id) }}">
                                                    <button type="submit" class="dropdown-item text-danger">
                                                        <i class="bi bi-trash"></i> Изтрий
                                                    </button>
                                                </form>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="11" class="text-center py-4">
                                    <div class="alert alert-info mb-0">
                                        Няма намерени имоти.
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Пагинация -->
    <div class="d-flex justify-content-center mt-4">
        {{ knp_pagination_render(properties) }}
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Изчистване на филтрите
            const clearFilters = document.createElement('button');
            clearFilters.type = 'button';
            clearFilters.className = 'btn btn-outline-secondary w-100';
            clearFilters.innerHTML = '<i class="bi bi-x-lg"></i> Изчисти филтрите';
            clearFilters.addEventListener('click', function() {
                window.location.href = '{{ path('admin_property_index') }}';
            });

            const filterForm = document.querySelector('form');
            const formRow = filterForm.querySelector('.row');
            const clearFiltersCol = document.createElement('div');
            clearFiltersCol.className = 'col-12 mt-2';
            clearFiltersCol.appendChild(clearFilters);
            formRow.appendChild(clearFiltersCol);

            // Показване на бутона само ако има активни филтри
            const hasActiveFilters = [
                'type',
                'location',
                'status'
            ].some(param => new URLSearchParams(window.location.search).has(param));

            clearFilters.style.display = hasActiveFilters ? 'block' : 'none';

            // Select All функционалност
            const selectAllCheckbox = document.getElementById('selectAll');
            const itemCheckboxes = document.querySelectorAll('tbody .form-check-input');

            selectAllCheckbox.addEventListener('change', function() {
                itemCheckboxes.forEach(checkbox => {
                    checkbox.checked = this.checked;
                });
            });
        });

        function togglePropertyStatus(element) {
            const propertyId = element.dataset.propertyId;
            const isActive = element.checked;

            fetch(`/admin/properties/${propertyId}/toggle-active`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest'
                },
                body: JSON.stringify({ isActive })
            })
            .then(response => response.json())
            .then(data => {
                if (!data.success) {
                    element.checked = !isActive;
                    alert('Възникна грешка при промяна на статуса');
                }
            })
            .catch(error => {
                element.checked = !isActive;
                alert('Възникна грешка при промяна на статуса');
            });
        }
    </script>
{% endblock %} 