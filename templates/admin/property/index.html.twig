{% extends 'admin/base.html.twig' %}

{% block title %}Имоти{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .property-card {
            height: 100%;
            transition: transform 0.2s;
        }
        .property-card:hover {
            transform: translateY(-5px);
        }
        .property-image {
            height: 200px;
            object-fit: cover;
            border-top-left-radius: calc(0.375rem - 1px);
            border-top-right-radius: calc(0.375rem - 1px);
        }
        .property-features {
            display: flex;
            gap: 1rem;
            font-size: 0.875rem;
            color: #6c757d;
            margin-bottom: 0.5rem;
        }
        .property-feature {
            display: flex;
            align-items: center;
            gap: 0.25rem;
        }
        .property-actions {
            position: absolute;
            top: 0.5rem;
            right: 0.5rem;
            display: flex;
            gap: 0.5rem;
        }
        .property-status {
            position: absolute;
            top: 0.5rem;
            left: 0.5rem;
            padding: 0.25rem 0.5rem;
            border-radius: 0.25rem;
            font-size: 0.75rem;
            font-weight: 500;
        }
        .status-available {
            background-color: var(--bs-success);
            color: white;
        }
        .status-unavailable {
            background-color: var(--bs-danger);
            color: white;
        }
        .property-type {
            position: absolute;
            bottom: 0.5rem;
            right: 0.5rem;
            padding: 0.25rem 0.5rem;
            border-radius: 0.25rem;
            font-size: 0.75rem;
            background-color: rgba(0,0,0,0.5);
            color: white;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
        <h1 class="h2">Имоти</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <a href="{{ path('admin_property_index') }}" class="btn btn-sm btn-primary">
                <i class="bi bi-plus-lg"></i> Нов имот
            </a>
        </div>
    </div>

    <!-- Филтри -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label for="type" class="form-label">Тип имот</label>
                    <select name="type" id="type" class="form-select">
                        <option value="">Всички</option>
                        <option value="industrial" {% if app.request.query.get('type') == 'industrial' %}selected{% endif %}>
                            Производствено помещение
                        </option>
                        <option value="logistics" {% if app.request.query.get('type') == 'logistics' %}selected{% endif %}>
                            Логистичен център
                        </option>
                        <option value="office" {% if app.request.query.get('type') == 'office' %}selected{% endif %}>
                            Офис сграда
                        </option>
                        <option value="retail" {% if app.request.query.get('type') == 'retail' %}selected{% endif %}>
                            Търговски площи
                        </option>
                        <option value="land" {% if app.request.query.get('type') == 'land' %}selected{% endif %}>
                            Парцел
                        </option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="location" class="form-label">Локация</label>
                    <input type="text" 
                           class="form-control" 
                           id="location" 
                           name="location" 
                           value="{{ app.request.query.get('location') }}"
                           placeholder="Търси по локация">
                </div>
                <div class="col-md-3">
                    <label for="status" class="form-label">Статус</label>
                    <select name="status" id="status" class="form-select">
                        <option value="">Всички</option>
                        <option value="available" {% if app.request.query.get('status') == 'available' %}selected{% endif %}>
                            Свободен
                        </option>
                        <option value="unavailable" {% if app.request.query.get('status') == 'unavailable' %}selected{% endif %}>
                            Зает
                        </option>
                    </select>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Търси
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Списък с имоти -->
    <div class="row g-4">
        {% for property in properties %}
            <div class="col-md-6 col-lg-4">
                <div class="card property-card">
                    <div class="position-relative">
                        <img src="{{ property.mainImage ? asset('uploads/properties/' ~ property.mainImage.filename) : asset('images/no-image.jpg') }}"
                             class="property-image w-100"
                             alt="{{ property.title }}">
                        
                        <div class="property-status {{ property.status == 'available' ? 'status-available' : 'status-unavailable' }}">
                            {{ property.status == 'available' ? 'Свободен' : 'Зает' }}
                        </div>
                        
                        <div class="property-type">
                            {% if property.type == 'industrial_land' %}
                                Индустриален парцел
                            {% elseif property.type == 'industrial_building' %}
                                Индустриална сграда
                            {% elseif property.type == 'logistics_center' %}
                                Логистичен център
                            {% elseif property.type == 'warehouse' %}
                                Склад
                            {% else %}
                                Производствена база
                            {% endif %}
                        </div>

                        <div class="property-actions">
                            <a href="{{ path('admin_property_index') }}"
                               class="btn btn-sm btn-light"
                               title="Редактирай">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <form method="post" 
                                  action="{{ path('admin_property_index') }}"
                                  class="d-inline"
                                  onsubmit="return confirm('Сигурни ли сте, че искате да изтриете този имот?');">
                                <button type="submit" 
                                        class="btn btn-sm btn-light text-danger"
                                        title="Изтрий">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                    
                    <div class="card-body">
                        <h5 class="card-title mb-2">{{ property.titleBg }}</h5>
                        <p class="card-text text-muted mb-2">
                            <i class="bi bi-geo-alt"></i> {{ property.locationBg }}
                        </p>
                        <div class="property-features">
                            <div class="property-feature">
                                <i class="bi bi-rulers"></i>
                                {{ property.area }} м²
                            </div>
                            {% if property.price %}
                            <div class="property-feature">
                                <i class="bi bi-currency-euro"></i>
                                {{ property.price|number_format(0, '.', ' ') }}
                            </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-info mb-0">
                    Няма намерени имоти.
                </div>
            </div>
        {% endfor %}
    </div>

    <!-- Пагинация -->
    {% if properties.haveToPaginate is defined %}
        <div class="d-flex justify-content-center mt-4">
            {{ knp_pagination_render(properties) }}
        </div>
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Изчистване на филтрите
            const clearFilters = document.createElement('button');
            clearFilters.type = 'button';
            clearFilters.className = 'btn btn-outline-secondary w-100';
            clearFilters.innerHTML = '<i class="bi bi-x-lg"></i> Изчисти филтрите';
            clearFilters.addEventListener('click', function() {
                window.location.href = '{{ path('admin_property_index') }}';
            });

            const filterForm = document.querySelector('form');
            const formRow = filterForm.querySelector('.row');
            const clearFiltersCol = document.createElement('div');
            clearFiltersCol.className = 'col-12 mt-2';
            clearFiltersCol.appendChild(clearFilters);
            formRow.appendChild(clearFiltersCol);

            // Показване на бутона само ако има активни филтри
            const hasActiveFilters = [
                'type',
                'location',
                'status'
            ].some(param => new URLSearchParams(window.location.search).has(param));

            clearFilters.style.display = hasActiveFilters ? 'block' : 'none';
        });
    </script>
{% endblock %} 