{% extends 'admin/base.html.twig' %}

{% block title %}Управление на снимки - {{ property.titleBg }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/min/dropzone.min.css">
    <style>
        .property-images {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 1rem;
            padding: 1rem;
        }
        .image-card {
            position: relative;
            border: 1px solid #dee2e6;
            border-radius: 0.25rem;
            padding: 0.5rem;
            background: #fff;
        }
        .image-card img {
            width: 100%;
            height: 150px;
            object-fit: cover;
            border-radius: 0.25rem;
        }
        .image-actions {
            position: absolute;
            top: 0.5rem;
            right: 0.5rem;
            display: flex;
            gap: 0.5rem;
        }
        .main-image-badge {
            position: absolute;
            top: 0.5rem;
            left: 0.5rem;
            background: rgba(25, 135, 84, 0.9);
            color: white;
            padding: 0.25rem 0.5rem;
            border-radius: 0.25rem;
            font-size: 0.875rem;
        }
        .dropzone {
            border: 2px dashed #dee2e6;
            border-radius: 0.5rem;
            background: #f8f9fa;
            min-height: 150px;
            padding: 1rem;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container-fluid px-4">
        <h1 class="mt-4">Управление на снимки</h1>
        <h2 class="h5 text-muted mb-4">{{ property.titleBg }}</h2>

        <div class="card mb-4">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <i class="bi bi-images me-1"></i>
                        Качване на нови снимки
                    </div>
                    <div>
                        <a href="{{ path('admin_property_edit', {'id': property.id}) }}" class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-arrow-left me-1"></i>
                            Назад към редактиране
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}

                <form action="{{ path('admin_property_images', {'id': property.id}) }}" 
                      class="dropzone" 
                      id="property-images-dropzone">
                </form>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <i class="bi bi-grid me-1"></i>
                Текущи снимки
            </div>
            <div class="card-body">
                <div class="property-images" id="sortable-images">
                    {% for image in property.images %}
                        <div class="image-card" data-image-id="{{ image.id }}">
                            {% if image.isMain %}
                                <div class="main-image-badge">
                                    <i class="bi bi-star-fill me-1"></i>
                                    Основна
                                </div>
                            {% endif %}
                            <img src="{{ asset('uploads/properties/' ~ image.path) }}" 
                                 alt="{{ property.titleBg }}"
                                 class="mb-2">
                            <div class="image-actions">
                                <button type="button" 
                                        class="btn btn-sm btn-outline-success set-main-image" 
                                        data-image-id="{{ image.id }}"
                                        {% if image.isMain %}disabled{% endif %}
                                        title="Задай като основна">
                                    <i class="bi bi-star"></i>
                                </button>
                                <button type="button" 
                                        class="btn btn-sm btn-outline-danger delete-image" 
                                        data-image-id="{{ image.id }}"
                                        title="Изтрий">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </div>
                    {% else %}
                        <div class="text-center py-5">
                            <p class="text-muted mb-0">Все още няма качени снимки</p>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/min/dropzone.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>
    <script>
        Dropzone.autoDiscover = false;

        document.addEventListener('DOMContentLoaded', function() {
            // Инициализация на Dropzone
            new Dropzone("#property-images-dropzone", {
                url: "{{ path('admin_property_images', {'id': property.id}) }}",
                paramName: "images[]",
                maxFilesize: 5, // MB
                acceptedFiles: "image/*",
                addRemoveLinks: true,
                dictDefaultMessage: "Пуснете снимки тук или кликнете за да изберете",
                dictRemoveFile: "Премахни",
                dictFileTooBig: "Файлът е твърде голям ({{filesize}}MB). Максимален размер: {{maxFilesize}}MB.",
                dictInvalidFileType: "Невалиден тип файл.",
                init: function() {
                    this.on("success", function() {
                        window.location.reload();
                    });
                }
            });

            // Инициализация на Sortable за пренареждане на снимките
            new Sortable(document.getElementById('sortable-images'), {
                animation: 150,
                onEnd: function() {
                    const images = document.querySelectorAll('.image-card');
                    const positions = {};
                    
                    images.forEach((image, index) => {
                        positions[image.dataset.imageId] = index;
                    });

                    fetch("{{ path('admin_property_reorder_images', {'id': property.id}) }}", {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify(positions)
                    });
                }
            });

            // Задаване на основна снимка
            document.querySelectorAll('.set-main-image').forEach(button => {
                button.addEventListener('click', function() {
                    const imageId = this.dataset.imageId;
                    fetch("{{ path('admin_property_images', {'id': property.id}) }}", {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                        },
                        body: `main_image=${imageId}`
                    }).then(() => {
                        window.location.reload();
                    });
                });
            });

            // Изтриване на снимка
            document.querySelectorAll('.delete-image').forEach(button => {
                button.addEventListener('click', function() {
                    if (confirm('Сигурни ли сте, че искате да изтриете тази снимка?')) {
                        const imageId = this.dataset.imageId;
                        fetch("{{ path('admin_property_delete_image', {
                            'id': property.id,
                            'imageId': '__imageId__'
                        })|replace({'__imageId__': ''}) }}" + imageId, {
                            method: 'POST'
                        }).then(() => {
                            window.location.reload();
                        });
                    }
                });
            });
        });
    </script>
{% endblock %} 