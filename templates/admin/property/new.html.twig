{% extends 'admin/base.html.twig' %}

{% block title %}Добавяне на нов имот{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://js.api.here.com/v3/3.1/mapsjs-ui.css" type="text/css" />
    <style>
        .property-form {
            max-width: 1200px;
            margin: 0 auto;
        }
        
        .form-section {
            background: #fff;
            border-radius: 0.5rem;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            padding: 1.5rem;
            margin-bottom: 1.5rem;
        }
        
        .form-section-title {
            color: #2c3e50;
            border-bottom: 2px solid #e9ecef;
            padding-bottom: 0.75rem;
            margin-bottom: 1.5rem;
        }
        
        .nav-tabs {
            border-bottom: 2px solid #e9ecef;
        }
        
        .nav-tabs .nav-link {
            border: none;
            color: #6c757d;
            padding: 0.75rem 1rem;
            margin-bottom: -2px;
        }
        
        .nav-tabs .nav-link.active {
            color: #2c3e50;
            border-bottom: 2px solid #3498db;
        }
        
        #locationMap {
            width: 100%;
            height: 400px;
            border-radius: 0.5rem;
            margin-bottom: 1rem;
            border: 1px solid #e9ecef;
        }
        
        .coordinates-wrapper {
            display: flex;
            gap: 1rem;
            margin-bottom: 1rem;
        }
        
        .coordinates-wrapper .form-group {
            flex: 1;
        }
        
        .form-control:focus {
            border-color: #3498db;
            box-shadow: 0 0 0 0.2rem rgba(52, 152, 219, 0.25);
        }
        
        .btn-primary {
            background-color: #3498db;
            border-color: #3498db;
        }
        
        .btn-primary:hover {
            background-color: #2980b9;
            border-color: #2980b9;
        }
        
        .form-check-input:checked {
            background-color: #3498db;
            border-color: #3498db;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="property-form">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 mb-0">Добавяне на нов имот</h1>
        </div>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        {{ form_start(form) }}
        
        <!-- Основна информация -->
        <div class="form-section">
            <h4 class="form-section-title">
                <i class="bi bi-info-circle"></i> Основна информация
            </h4>
            
            <div class="row mb-4">
                <div class="col-md-6">
                    {{ form_row(form.type) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.area) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.price) }}
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-check mb-3">
                        {{ form_widget(form.isActive) }}
                        {{ form_label(form.isActive) }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-check mb-3">
                        {{ form_widget(form.isFeatured) }}
                        {{ form_label(form.isFeatured) }}
                    </div>
                </div>
            </div>
        </div>

        <!-- Описание на различни езици -->
        <div class="form-section">
            <h4 class="form-section-title">
                <i class="bi bi-translate"></i> Описание на различни езици
            </h4>
            
            <ul class="nav nav-tabs mb-4" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" data-bs-toggle="tab" href="#bg">
                        <i class="bi bi-globe"></i> Български
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#en">
                        <i class="bi bi-globe"></i> English
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#de">
                        <i class="bi bi-globe"></i> Deutsch
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#ru">
                        <i class="bi bi-globe"></i> Русский
                    </a>
                </li>
            </ul>

            <div class="tab-content">
                <div class="tab-pane fade show active" id="bg">
                    {{ form_row(form.titleBg) }}
                    {{ form_row(form.descriptionBg) }}
                    {{ form_row(form.locationBg) }}
                </div>
                <div class="tab-pane fade" id="en">
                    {{ form_row(form.titleEn) }}
                    {{ form_row(form.descriptionEn) }}
                    {{ form_row(form.locationEn) }}
                </div>
                <div class="tab-pane fade" id="de">
                    {{ form_row(form.titleDe) }}
                    {{ form_row(form.descriptionDe) }}
                    {{ form_row(form.locationDe) }}
                </div>
                <div class="tab-pane fade" id="ru">
                    {{ form_row(form.titleRu) }}
                    {{ form_row(form.descriptionRu) }}
                    {{ form_row(form.locationRu) }}
                </div>
            </div>
        </div>

        <!-- Локация -->
        <div class="form-section">
            <h4 class="form-section-title">
                <i class="bi bi-geo-alt"></i> Локация
            </h4>
            
            <div class="mb-3">
                {{ form_label(form.address) }}
                <div class="input-group">
                    {{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
                    <button class="btn btn-outline-primary" type="button" id="geocodeAddress">
                        <i class="bi bi-search"></i> Намери координати
                    </button>
                </div>
                <small class="form-text text-muted">Въведете адрес във формат: улица и номер, град, държава. За по-точни резултати включете пощенски код.</small>
                {{ form_errors(form.address) }}
                <div id="geocodeResults" class="mt-2" style="display: none;">
                    <p class="mb-1">Намерени резултати:</p>
                    <ul id="geocodeResultsList" class="list-group"></ul>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.latitude) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.longitude) }}
                </div>
            </div>
            <div id="locationMap" style="height: 400px; width: 100%; margin-bottom: 20px;"></div>
        </div>

        <!-- PDF Expose -->
        <div class="form-section">
            <h4 class="form-section-title">
                <i class="bi bi-file-pdf"></i> PDF Файлове
            </h4>
            
            {{ form_row(form.expose.exposeFile) }}
        </div>

        {{ form_rest(form) }}

        <!-- Бутони -->
        <div class="form-section">
            <div class="d-flex justify-content-end gap-2">
                <a href="{{ path('admin_property_index') }}" class="btn btn-outline-secondary">
                    <i class="bi bi-x"></i> Отказ
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-lg"></i> Създай имот
                </button>
            </div>
        </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/@ckeditor/ckeditor5-build-classic/build/ckeditor.js"></script>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin=""/>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // CKEditor initialization
            const editors = ['descriptionBg', 'descriptionEn', 'descriptionDe', 'descriptionRu'];
            
            editors.forEach(function(editorId) {
                const element = document.querySelector('#property_' + editorId);
                if (element) {
                    ClassicEditor
                        .create(element, {
                            toolbar: [
                                'heading',
                                '|',
                                'bold',
                                'italic',
                                'link',
                                'bulletedList',
                                'numberedList',
                                '|',
                                'undo',
                                'redo'
                            ],
                            heading: {
                                options: [
                                    { model: 'paragraph', title: 'Paragraph', class: 'ck-heading_paragraph' },
                                    { model: 'heading1', view: 'h1', title: 'Heading 1', class: 'ck-heading_heading1' },
                                    { model: 'heading2', view: 'h2', title: 'Heading 2', class: 'ck-heading_heading2' }
                                ]
                            }
                        })
                        .then(editor => {
                            window[`editor_${editorId}`] = editor;
                        })
                        .catch(error => {
                            console.error(error);
                        });
                }
            });
            
            // Проверяваме дали елементите съществуват
            const latitudeField = document.getElementById('property_latitude');
            const longitudeField = document.getElementById('property_longitude');
            const mapElement = document.getElementById('locationMap');
            const addressField = document.getElementById('property_address');
            const geocodeButton = document.getElementById('geocodeAddress');
            const geocodeResults = document.getElementById('geocodeResults');
            const geocodeResultsList = document.getElementById('geocodeResultsList');
            
            if (!latitudeField || !longitudeField || !mapElement) {
                console.error('Не са намерени необходимите елементи за картата');
                return;
            }
            
            // Задаваме начални стойности за координатите (център на България)
            let latitude = latitudeField.value || 42.7339;
            let longitude = longitudeField.value || 25.4858;
            
            // Инициализираме OpenStreetMap
            const map = L.map('locationMap').setView([latitude, longitude], 8);
            
            // Добавяме слой с плочки от OpenStreetMap
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
            }).addTo(map);
            
            // Добавяме маркер
            let marker = L.marker([latitude, longitude], {
                draggable: true
            }).addTo(map);
            
            // Добавяме попъп с информация
            marker.bindPopup(`<div>
                <strong>Координати:</strong><br>
                Lat: ${latitude}<br>
                Lng: ${longitude}
            </div>`);
            
            // Актуализираме координатите при преместване на маркера
            marker.on('dragend', function(e) {
                const position = marker.getLatLng();
                latitudeField.value = position.lat.toFixed(6);
                longitudeField.value = position.lng.toFixed(6);
                
                // Актуализираме попъпа
                marker.setPopupContent(`<div>
                    <strong>Координати:</strong><br>
                    Lat: ${position.lat.toFixed(6)}<br>
                    Lng: ${position.lng.toFixed(6)}
                </div>`);
                
                marker.openPopup();
            });
            
            // Функция за намиране на координати по адрес
            function findCoordinates() {
                const address = addressField.value;
                if (!address) {
                    alert('Моля, въведете адрес');
                    return;
                }
                
                // Показваме индикатор за зареждане
                geocodeButton.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Търсене...';
                geocodeButton.disabled = true;
                
                // Използваме OpenStreetMap Nominatim API за геокодиране
                fetch(`https://nominatim.openstreetmap.org/search?format=json&q=${encodeURIComponent(address)}&limit=5`)
                    .then(response => response.json())
                    .then(data => {
                        console.log('Резултат от геокодиране:', data);
                        
                        if (data && data.length > 0) {
                            // Показваме първия резултат на картата
                            const firstResult = data[0];
                            const coords = {
                                lat: parseFloat(firstResult.lat),
                                lng: parseFloat(firstResult.lon)
                            };
                            
                            // Актуализираме полетата за координати
                            latitudeField.value = coords.lat.toFixed(6);
                            longitudeField.value = coords.lng.toFixed(6);
                            
                            // Актуализираме маркера и центрираме картата
                            marker.setLatLng(coords);
                            map.setView(coords, 15);
                            
                            // Актуализираме попъпа
                            marker.setPopupContent(`<div>
                                <strong>Адрес:</strong> ${firstResult.display_name}<br>
                                <strong>Координати:</strong><br>
                                Lat: ${coords.lat.toFixed(6)}<br>
                                Lng: ${coords.lng.toFixed(6)}
                            </div>`);
                            
                            marker.openPopup();
                            
                            // Показваме всички резултати, ако има повече от един
                            if (data.length > 1) {
                                // Изчистваме предишните резултати
                                geocodeResultsList.innerHTML = '';
                                
                                // Добавяме всеки резултат като опция
                                data.forEach((item, index) => {
                                    const li = document.createElement('li');
                                    li.className = 'list-group-item list-group-item-action' + (index === 0 ? ' active' : '');
                                    
                                    // Форматираме адреса
                                    li.innerHTML = item.display_name;
                                    
                                    // Добавяме обработчик на събития
                                    li.addEventListener('click', function() {
                                        // Премахваме активния клас от всички елементи
                                        geocodeResultsList.querySelectorAll('li').forEach(el => el.classList.remove('active'));
                                        // Добавяме активен клас към текущия елемент
                                        this.classList.add('active');
                                        
                                        // Актуализираме картата и полетата
                                        const itemCoords = {
                                            lat: parseFloat(item.lat),
                                            lng: parseFloat(item.lon)
                                        };
                                        
                                        // Актуализираме маркера и центрираме картата
                                        marker.setLatLng(itemCoords);
                                        map.setView(itemCoords, 15);
                                        
                                        // Актуализираме полетата за координати
                                        latitudeField.value = itemCoords.lat.toFixed(6);
                                        longitudeField.value = itemCoords.lng.toFixed(6);
                                        
                                        // Актуализираме попъпа
                                        marker.setPopupContent(`<div>
                                            <strong>Адрес:</strong> ${item.display_name}<br>
                                            <strong>Координати:</strong><br>
                                            Lat: ${itemCoords.lat.toFixed(6)}<br>
                                            Lng: ${itemCoords.lng.toFixed(6)}
                                        </div>`);
                                        
                                        marker.openPopup();
                                    });
                                    
                                    geocodeResultsList.appendChild(li);
                                });
                                
                                // Показваме контейнера с резултати
                                geocodeResults.style.display = 'block';
                            } else {
                                // Скриваме контейнера с резултати, ако има само един резултат
                                geocodeResults.style.display = 'none';
                            }
                        } else {
                            console.error('Не са намерени резултати за адрес:', address);
                            alert('Не можахме да намерим координатите за този адрес. Моля, опитайте с по-точен адрес или въведете координатите ръчно.');
                            // Скриваме контейнера с резултати
                            geocodeResults.style.display = 'none';
                        }
                        
                        // Възстановяваме бутона
                        geocodeButton.innerHTML = '<i class="bi bi-search"></i> Намери координати';
                        geocodeButton.disabled = false;
                    })
                    .catch(error => {
                        console.error('Грешка при геокодиране:', error);
                        alert('Възникна грешка при търсенето на координати: ' + error.message);
                        
                        // Възстановяваме бутона
                        geocodeButton.innerHTML = '<i class="bi bi-search"></i> Намери координати';
                        geocodeButton.disabled = false;
                    });
            }
            
            // Добавяме слушател за бутона за намиране на координати
            if (geocodeButton) {
                geocodeButton.addEventListener('click', findCoordinates);
            }
            
            // Добавяме слушател за клик върху картата
            map.on('click', function(e) {
                const coords = e.latlng;
                
                // Актуализираме полетата за координати
                latitudeField.value = coords.lat.toFixed(6);
                longitudeField.value = coords.lng.toFixed(6);
                
                // Актуализираме маркера
                marker.setLatLng(coords);
                
                // Актуализираме попъпа
                marker.setPopupContent(`<div>
                    <strong>Координати:</strong><br>
                    Lat: ${coords.lat.toFixed(6)}<br>
                    Lng: ${coords.lng.toFixed(6)}
                </div>`);
                
                marker.openPopup();
            });
            
            // Обработка на клавиша Enter в полето за адрес
            if (addressField) {
                addressField.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {
                        e.preventDefault();
                        findCoordinates();
                    }
                });
            }
            
            // Обработка на промяна на размера на прозореца
            window.addEventListener('resize', function() {
                map.invalidateSize();
            });
        });
    </script>
{% endblock %} 