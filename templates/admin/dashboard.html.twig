{% extends 'admin/base.html.twig' %}

{% block title %}Табло{% endblock %}

{% block content %}
<div class="container-fluid">
    <!-- Статистика -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Имоти
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                {{ stats.properties.total }}
                            </div>
                            <div class="text-muted small">
                                Активни: {{ stats.properties.active }} | 
                                Featured: {{ stats.properties.featured }}
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-building fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Блог постове
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                {{ stats.blog_posts.total }}
                            </div>
                            <div class="text-muted small">
                                Публикувани: {{ stats.blog_posts.published }} | 
                                Чернови: {{ stats.blog_posts.draft }}
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-blog fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Запитвания
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                {{ stats.inquiries.total }}
                            </div>
                            <div class="text-muted small">
                                Нови: {{ stats.inquiries.new }} | 
                                Отговорени: {{ stats.inquiries.answered }}
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-envelope fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Потребители
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                {{ stats.users.total }}
                            </div>
                            <div class="text-muted small">
                                Активни: {{ stats.users.active }}
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Последни активности -->
    <div class="row">
        <!-- Последни имоти -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">Последно добавени имоти</h6>
                    <a href="{{ path('admin_property_list') }}" class="btn btn-sm btn-primary">
                        Виж всички
                    </a>
                </div>
                <div class="card-body">
                    {% if recent_activity.properties|length > 0 %}
                        <div class="list-group list-group-flush">
                            {% for property in recent_activity.properties %}
                                <a href="{{ path('admin_property_edit', {id: property.id}) }}" 
                                   class="list-group-item list-group-item-action">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">{{ property.title }}</h6>
                                        <small class="text-muted">{{ property.createdAt|date('d.m.Y H:i') }}</small>
                                    </div>
                                    <p class="mb-1">{{ property.price|number_format(0, '.', ' ') }} € | {{ property.area }} м²</p>
                                </a>
                            {% endfor %}
                        </div>
                    {% else %}
                        <p class="text-muted mb-0">Няма скорошни имоти</p>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Последни запитвания -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">Последни запитвания</h6>
                    <a href="{{ path('admin_inquiry_list') }}" class="btn btn-sm btn-primary">
                        Виж всички
                    </a>
                </div>
                <div class="card-body">
                    {% if recent_activity.inquiries|length > 0 %}
                        <div class="list-group list-group-flush">
                            {% for inquiry in recent_activity.inquiries %}
                                <a href="{{ path('admin_inquiry_view', {id: inquiry.id}) }}" 
                                   class="list-group-item list-group-item-action">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">{{ inquiry.name }}</h6>
                                        <small class="text-muted">{{ inquiry.createdAt|date('d.m.Y H:i') }}</small>
                                    </div>
                                    <p class="mb-1">{{ inquiry.subject }}</p>
                                </a>
                            {% endfor %}
                        </div>
                    {% else %}
                        <p class="text-muted mb-0">Няма скорошни запитвания</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Последни блог постове -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">Последни блог постове</h6>
                    <a href="{{ path('admin_blog_list') }}" class="btn btn-sm btn-primary">
                        Виж всички
                    </a>
                </div>
                <div class="card-body">
                    {% if recent_activity.blog_posts|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Заглавие</th>
                                        <th>Автор</th>
                                        <th>Категория</th>
                                        <th>Статус</th>
                                        <th>Дата</th>
                                        <th>Действия</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for post in recent_activity.blog_posts %}
                                        <tr>
                                            <td>{{ post.title }}</td>
                                            <td>{{ post.author }}</td>
                                            <td>{{ post.category }}</td>
                                            <td>
                                                {% if post.published %}
                                                    <span class="badge bg-success">Публикуван</span>
                                                {% else %}
                                                    <span class="badge bg-warning">Чернова</span>
                                                {% endif %}
                                            </td>
                                            <td>{{ post.createdAt|date('d.m.Y H:i') }}</td>
                                            <td class="table-actions">
                                                <a href="{{ path('admin_blog_edit', {id: post.id}) }}" 
                                                   class="btn btn-sm btn-primary">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a href="{{ path('admin_blog_delete', {id: post.id}) }}" 
                                                   class="btn btn-sm btn-danger"
                                                   onclick="return confirmDelete(event)">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <p class="text-muted mb-0">Няма скорошни блог постове</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 