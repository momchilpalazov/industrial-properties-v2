{% extends 'admin/base.html.twig' %}

{% block title %}Редактиране на тип имот{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .property-form {
            max-width: 1200px;
            margin: 0 auto;
        }
        
        .form-section {
            background: #fff;
            border-radius: 0.5rem;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            padding: 1.5rem;
            margin-bottom: 1.5rem;
        }
        
        .form-section-title {
            color: #2c3e50;
            border-bottom: 2px solid #e9ecef;
            padding-bottom: 0.75rem;
            margin-bottom: 1.5rem;
        }
        
        .form-control:focus {
            border-color: #3498db;
            box-shadow: 0 0 0 0.2rem rgba(52, 152, 219, 0.25);
        }
        
        .btn-primary {
            background-color: #3498db;
            border-color: #3498db;
        }
        
        .btn-primary:hover {
            background-color: #2980b9;
            border-color: #2980b9;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container-fluid px-4">
        <h1 class="mt-4">Редактиране на тип имот</h1>
        
        <div class="card mb-4">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <i class="bi bi-pencil-square me-1"></i>
                        Редактиране на "{{ property_type.name }}"
                        {% if property_type.parent %}
                            <span class="text-muted">
                                (подкатегория на "{{ property_type.parent.name }}")
                            </span>
                        {% endif %}
                    </div>
                    <a href="{{ path('admin_property_type_index') }}" class="btn btn-secondary btn-sm">
                        <i class="bi bi-arrow-left me-1"></i> Назад към списъка
                    </a>
                </div>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                    <div class="row g-4">
                        {# Bulgarian Fields #}
                        <div class="col-md-6">
                            <div class="card h-100">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0">
                                        <i class="bi bi-translate me-1"></i>
                                        Информация на български
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        {{ form_label(form.name, 'Име (BG)', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Въведете име на български'}}) }}
                                        {{ form_errors(form.name, {'attr': {'class': 'invalid-feedback'}}) }}
                                        <div class="form-text">Въведете името на типа имот на български език</div>
                                    </div>

                                    <div class="mb-3">
                                        {{ form_label(form.description, 'Описание (BG)', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '4', 'placeholder': 'Въведете описание на български'}}) }}
                                        {{ form_errors(form.description, {'attr': {'class': 'invalid-feedback'}}) }}
                                        <div class="form-text">Въведете описание на типа имот на български език (незадължително)</div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        {# English Fields #}
                        <div class="col-md-6">
                            <div class="card h-100">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0">
                                        <i class="bi bi-translate me-1"></i>
                                        Information in English
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        {{ form_label(form.nameEn, 'Name (EN)', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.nameEn, {'attr': {'class': 'form-control', 'placeholder': 'Enter name in English'}}) }}
                                        {{ form_errors(form.nameEn, {'attr': {'class': 'invalid-feedback'}}) }}
                                        <div class="form-text">Enter the property type name in English</div>
                                    </div>

                                    <div class="mb-3">
                                        {{ form_label(form.descriptionEn, 'Description (EN)', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.descriptionEn, {'attr': {'class': 'form-control', 'rows': '4', 'placeholder': 'Enter description in English'}}) }}
                                        {{ form_errors(form.descriptionEn, {'attr': {'class': 'invalid-feedback'}}) }}
                                        <div class="form-text">Enter the property type description in English (optional)</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        {# Hierarchy Settings #}
                        <div class="col-12 mt-4">
                            <div class="card">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0">
                                        <i class="bi bi-diagram-3 me-1"></i>
                                        Настройки на йерархията и видимостта
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-8">
                                            <div class="mb-3">
                                                {{ form_label(form.parent, 'Родителска категория', {'label_attr': {'class': 'form-label'}}) }}
                                                {{ form_widget(form.parent, {'attr': {'class': 'form-select'}}) }}
                                                {{ form_errors(form.parent, {'attr': {'class': 'invalid-feedback'}}) }}
                                                <div class="form-text">Изберете родителска категория, ако този тип е подкатегория. Оставете празно за основна категория.</div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="mb-3 form-check mt-4">
                                                {{ form_widget(form.isVisible) }}
                                                {{ form_label(form.isVisible) }}
                                                <div class="form-text">Определя дали типът имот ще бъде видим в публичната част на сайта.</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        {% if property_type.hasChildren %}
                        <div class="col-12 mt-4">
                            <div class="card border-info">
                                <div class="card-header bg-info text-white">
                                    <h5 class="mb-0">
                                        <i class="bi bi-info-circle me-1"></i>
                                        Информация за подкатегориите
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <p>Този тип имот има {{ property_type.children|length }} подкатегор{{ property_type.children|length == 1 ? 'ия' : 'ии' }}:</p>
                                    <ul class="list-group">
                                        {% for child in property_type.children %}
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                {{ child.name }}
                                                <a href="{{ path('admin_property_type_edit', {'id': child.id}) }}" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-pencil-square"></i> Редактирай
                                                </a>
                                            </li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            </div>
                        </div>
                        {% endif %}
                        
                        {% if property_type.properties|length > 0 %}
                        <div class="col-12 mt-4">
                            <div class="card border-warning">
                                <div class="card-header bg-warning text-dark">
                                    <h5 class="mb-0">
                                        <i class="bi bi-exclamation-triangle me-1"></i>
                                        Свързани имоти
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <p>Този тип имот има {{ property_type.properties|length }} свързан{{ property_type.properties|length == 1 ? '' : 'и' }} имот{{ property_type.properties|length == 1 ? '' : 'а' }}.</p>
                                    <p class="mb-0">
                                        <strong>Внимание:</strong> Промяната на този тип имот ще засегне всички свързани имоти.
                                    </p>
                                </div>
                            </div>
                        </div>
                        {% endif %}
                    </div>

                    <div class="mt-4 text-end">
                        <a href="{{ path('admin_property_type_index') }}" class="btn btn-light me-2">
                            <i class="bi bi-x-lg me-1"></i> Отказ
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-1"></i> Запази промените
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %} 