<!DOCTYPE html>
<html lang="{{ current_language() }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Админ панел{% endblock %} - Industrial Properties</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <!-- Admin CSS -->
    <style>
        .sidebar {
            min-height: 100vh;
            background-color: #343a40;
        }
        .sidebar .nav-link {
            color: rgba(255,255,255,.75);
            padding: .75rem 1rem;
        }
        .sidebar .nav-link:hover {
            color: rgba(255,255,255,.95);
            background-color: rgba(255,255,255,.1);
        }
        .sidebar .nav-link.active {
            color: #fff;
            background-color: rgba(255,255,255,.15);
        }
        .sidebar .nav-link i {
            width: 20px;
            text-align: center;
            margin-right: 0.5rem;
        }
        .content {
            padding: 20px;
        }
        .navbar-brand {
            padding: 1rem;
            color: white;
            font-weight: bold;
        }
        .user-menu {
            padding: 1rem;
            border-top: 1px solid rgba(255,255,255,.1);
            margin-top: auto;
        }
        .table-actions {
            white-space: nowrap;
        }
    </style>
    {% block stylesheets %}{% endblock %}
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 px-0 sidebar d-flex flex-column">
                <a class="navbar-brand" href="{{ path('admin_dashboard') }}">
                    <i class="fas fa-building me-2"></i>
                    Админ панел
                </a>
                
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') starts with 'admin_dashboard' %}active{% endif %}" 
                           href="{{ path('admin_dashboard') }}">
                            <i class="fas fa-tachometer-alt"></i>
                            Табло
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') starts with 'admin_property' %}active{% endif %}" 
                           href="{{ path('admin_property_list') }}">
                            <i class="fas fa-building"></i>
                            Имоти
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') starts with 'admin_blog' %}active{% endif %}" 
                           href="{{ path('admin_blog_list') }}">
                            <i class="fas fa-blog"></i>
                            Блог
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') starts with 'admin_inquiry' %}active{% endif %}" 
                           href="{{ path('admin_inquiry_list') }}">
                            <i class="fas fa-envelope"></i>
                            Запитвания
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') starts with 'admin_user' %}active{% endif %}" 
                           href="{{ path('admin_user_list') }}">
                            <i class="fas fa-users"></i>
                            Потребители
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') starts with 'admin_settings' %}active{% endif %}" 
                           href="{{ path('admin_settings') }}">
                            <i class="fas fa-cog"></i>
                            Настройки
                        </a>
                    </li>
                </ul>

                <div class="user-menu text-light mt-auto">
                    <div class="d-flex align-items-center mb-2">
                        <i class="fas fa-user-circle fs-4 me-2"></i>
                        <div>
                            <div>{{ app.user.name }}</div>
                            <small class="text-muted">{{ app.user.email }}</small>
                        </div>
                    </div>
                    <a href="{{ path('admin_logout') }}" class="btn btn-outline-light btn-sm w-100">
                        <i class="fas fa-sign-out-alt me-2"></i>Изход
                    </a>
                </div>
            </div>

            <!-- Main Content -->
            <main class="col-md-9 col-lg-10 content">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    {% endfor %}
                {% endfor %}

                {% block content %}{% endblock %}
            </main>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Admin JS -->
    <script>
        // Общи функции за админ панела
        function confirmDelete(event, message) {
            if (!confirm(message || 'Сигурни ли сте, че искате да изтриете този запис?')) {
                event.preventDefault();
                return false;
            }
            return true;
        }
    </script>
    {% block javascripts %}{% endblock %}
</body>
</html> 