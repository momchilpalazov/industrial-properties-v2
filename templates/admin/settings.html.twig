{% extends 'admin/base.html.twig' %}

{% block title %}Настройки{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
        <h1 class="h2">Настройки</h1>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">Основни настройки</h5>
                </div>
                <div class="card-body">
                    <form method="post" action="{{ path('admin_settings_save') }}">
                        <div class="mb-3">
                            <label for="site_name" class="form-label">Име на сайта</label>
                            <input type="text" class="form-control" id="site_name" name="site_name" 
                                   value="{{ settings.site_name|default('Industrial Properties') }}">
                        </div>
                        <div class="mb-3">
                            <label for="admin_email" class="form-label">Административен имейл</label>
                            <input type="email" class="form-control" id="admin_email" name="admin_email" 
                                   value="{{ settings.admin_email|default('admin@example.com') }}">
                        </div>
                        <div class="mb-3">
                            <label for="items_per_page" class="form-label">Брой елементи на страница</label>
                            <input type="number" class="form-control" id="items_per_page" name="items_per_page" 
                                   value="{{ settings.items_per_page|default(10) }}">
                        </div>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Запази промените
                        </button>
                    </form>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Управление на кеша</h5>
                </div>
                <div class="card-body">
                    <form method="post" action="{{ path('admin_cache_clear') }}" class="mb-3">
                        <p class="text-muted">Изчистването на кеша може да помогне при проблеми с показването на съдържанието или след обновяване на системата.</p>
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-trash"></i> Изчисти кеша
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">API Настройки</h5>
                </div>
                <div class="card-body">
                    <form method="post" action="{{ path('admin_settings_api') }}">
                        <div class="mb-3">
                            <label for="facebook_app_id" class="form-label">Facebook App ID</label>
                            <input type="text" class="form-control" id="facebook_app_id" name="facebook_app_id" 
                                   value="{{ settings.facebook_app_id|default('') }}">
                        </div>
                        <div class="mb-3">
                            <label for="facebook_app_secret" class="form-label">Facebook App Secret</label>
                            <input type="text" class="form-control" id="facebook_app_secret" name="facebook_app_secret" 
                                   value="{{ settings.facebook_app_secret|default('') }}">
                        </div>
                        <div class="mb-3">
                            <label for="facebook_page_id" class="form-label">Facebook Page ID</label>
                            <input type="text" class="form-control" id="facebook_page_id" name="facebook_page_id" 
                                   value="{{ settings.facebook_page_id|default('') }}">
                        </div>
                        <div class="mb-3">
                            <label for="facebook_page_access_token" class="form-label">Facebook Page Access Token</label>
                            <input type="text" class="form-control" id="facebook_page_access_token" name="facebook_page_access_token" 
                                   value="{{ settings.facebook_page_access_token|default('') }}">
                        </div>
                        <div class="mb-3">
                            <label for="linkedin_access_token" class="form-label">LinkedIn Access Token</label>
                            <input type="text" class="form-control" id="linkedin_access_token" name="linkedin_access_token" 
                                   value="{{ settings.linkedin_access_token|default('') }}">
                        </div>
                        <div class="mb-3">
                            <label for="linkedin_organization_id" class="form-label">LinkedIn Organization ID</label>
                            <input type="text" class="form-control" id="linkedin_organization_id" name="linkedin_organization_id" 
                                   value="{{ settings.linkedin_organization_id|default('') }}">
                        </div>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Запази промените
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 