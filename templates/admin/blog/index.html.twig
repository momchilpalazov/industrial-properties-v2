{% extends 'admin/base.html.twig' %}

{% block title %}{{ 'blog.admin.title'|trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .blog-card {
            height: 100%;
            transition: transform 0.3s;
        }
        .blog-card:hover {
            transform: translateY(-5px);
        }
        .blog-image {
            height: 200px;
            object-fit: cover;
            border-top-left-radius: calc(0.375rem - 1px);
            border-top-right-radius: calc(0.375rem - 1px);
        }
        .blog-meta {
            display: flex;
            gap: 1rem;
            font-size: 0.875rem;
            color: #6c757d;
            margin-bottom: 0.5rem;
        }
        .blog-actions {
            position: absolute;
            top: 0.5rem;
            right: 0.5rem;
            display: flex;
            gap: 0.5rem;
        }
        .blog-status {
            position: absolute;
            top: 0.5rem;
            left: 0.5rem;
            padding: 0.25rem 0.5rem;
            border-radius: 0.25rem;
            font-size: 0.75rem;
            font-weight: 500;
        }
        .status-published {
            background-color: var(--bs-success);
            color: white;
        }
        .status-draft {
            background-color: var(--bs-warning);
            color: white;
        }
        .blog-category {
            position: absolute;
            bottom: 0.5rem;
            right: 0.5rem;
            padding: 0.25rem 0.5rem;
            border-radius: 0.25rem;
            font-size: 0.75rem;
            background-color: rgba(0,0,0,0.5);
            color: white;
        }
        .form-switch {
            padding-left: 2.5em;
        }
        .form-switch .form-check-input {
            width: 3em;
        }
        .btn-group {
            gap: 0.25rem;
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Toast нотификация -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div id="toast" class="toast align-items-center text-white bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body"></div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
        <h1 class="h2">{{ 'blog.admin.title'|trans }}</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <a href="{{ path('admin_blog_new') }}" class="btn btn-sm btn-primary">
                <i class="bi bi-plus-lg"></i> {{ 'blog.admin.new_post'|trans }}
            </a>
        </div>
    </div>

    <!-- Списък с блог постове -->
    <div class="row g-4">
        {% for post in posts %}
            <div class="col-md-6 col-lg-4">
                <div class="card blog-card">
                    {% if post.image %}
                        <img src="{{ asset('img/blog/' ~ post.image) }}" 
                             class="blog-image" 
                             alt="{{ post.getTitle(app.request.locale) }}">
                    {% else %}
                        <img src="{{ asset('img/blog-placeholder.jpg') }}" 
                             class="blog-image" 
                             alt="Blog placeholder">
                    {% endif %}

                    <div class="blog-actions">
                        <div class="btn-group">
                            <a href="{{ path('admin_blog_edit', {'id': post.id}) }}" 
                               class="btn btn-sm btn-primary" 
                               title="{{ 'blog.admin.edit_post'|trans }}">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <button type="button" 
                                    class="btn btn-sm btn-danger delete-post" 
                                    data-id="{{ post.id }}" 
                                    title="{{ 'blog.admin.delete_post'|trans }}">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </div>

                    <div class="blog-status {% if post.isPublished %}status-published{% else %}status-draft{% endif %}">
                        {{ post.isPublished ? 'blog.admin.published'|trans : 'blog.admin.draft'|trans }}
                    </div>

                    <div class="card-body">
                        <h5 class="card-title">{{ post.getTitle(app.request.locale) }}</h5>
                        <div class="blog-meta">
                            <span>
                                <i class="bi bi-calendar"></i>
                                {{ post.publishedAt|date('d.m.Y') }}
                            </span>
                            <span>
                                <i class="bi bi-folder"></i>
                                {{ post.category }}
                            </span>
                        </div>
                        <p class="card-text">{{ post.excerptBg }}</p>
                        <div class="form-check form-switch">
                            <input class="form-check-input toggle-published" 
                                   type="checkbox" 
                                   role="switch" 
                                   {% if post.isPublished %}checked{% endif %}
                                   data-post-id="{{ post.id }}"
                                   title="{% if post.isPublished %}Скрий{% else %}Публикувай{% endif %}">
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-info text-center">
                    Няма намерени блог постове.
                </div>
            </div>
        {% endfor %}
    </div>

    <!-- Пагинация -->
    <div class="d-flex justify-content-center mt-4">
        {{ knp_pagination_render(posts) }}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Обработка на статус бутона
            const publishSwitches = document.querySelectorAll('.toggle-published');
            publishSwitches.forEach(function(switchEl) {
                switchEl.addEventListener('change', function() {
                    const postId = this.getAttribute('data-post-id');
                    const isPublished = this.checked;

                    fetch(`/admin/blog/${postId}/toggle-published`, {
                        method: 'POST',
                        headers: {
                            'X-Requested-With': 'XMLHttpRequest'
                        }
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            const toast = new bootstrap.Toast(document.getElementById('toast'));
                            document.querySelector('#toast .toast-body').textContent = data.message;
                            toast.show();

                            // Обновяваме статус баджа
                            const statusBadge = this.closest('.card').querySelector('.blog-status');
                            statusBadge.classList.toggle('status-published');
                            statusBadge.classList.toggle('status-draft');
                            statusBadge.textContent = isPublished ? 'Публикувана' : 'Чернова';
                        } else {
                            this.checked = !isPublished;
                            alert('Възникна грешка при промяна на статуса');
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        this.checked = !isPublished;
                        alert('Възникна грешка при промяна на статуса');
                    });
                });
            });

            // Обработка на бутона за изтриване
            document.querySelectorAll('.delete-post').forEach(button => {
                button.addEventListener('click', function() {
                    if (confirm('{{ 'blog.admin.confirm_delete'|trans }}')) {
                        const postId = this.dataset.id;
                        
                        const form = document.createElement('form');
                        form.method = 'POST';
                        form.action = `/admin/blog/${postId}`;
                        
                        const tokenInput = document.createElement('input');
                        tokenInput.type = 'hidden';
                        tokenInput.name = '_token';
                        tokenInput.value = '{{ csrf_token('delete') }}';
                        
                        form.appendChild(tokenInput);
                        document.body.appendChild(form);
                        form.submit();
                    }
                });
            });
        });
    </script>
{% endblock %} 